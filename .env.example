# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/transport_management

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here_change_in_production

# Server Configuration
PORT=3000
HTTPS_PORT=3443

# Development/Production Mode
NODE_ENV=development

# SSL/HTTPS Configuration
# Local Development: Use mkcert or self-signed certificates
# Production: Use Let's Encrypt or commercial certificates
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/local/localhost-key.pem
SSL_CERT_PATH=./ssl/local/localhost-cert.pem
FORCE_HTTPS=false

# HSTS (HTTP Strict Transport Security) - Only enable in production with HTTPS
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000

# Cookie Security
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Application URL (for email links)
APP_URL=http://localhost:3000

# Email Configuration
# For Gmail: Enable 2FA and create an App Password
# For production: Use SendGrid, Mailgun, AWS SES, etc.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=Triply Transport
EMAIL_FROM_ADDRESS=noreply@triply.com
EMAIL_REPLY_TO=support@triply.com

# Admin Email Configuration
# For multiple admins (recommended): Comma-separated list of all team admin emails
ADMIN_EMAILS=admin1@yourcompany.com,admin2@yourcompany.com,admin3@yourcompany.com,admin4@yourcompany.com
# For single admin (legacy): Single admin email
# ADMIN_EMAIL=admin@transport.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Optional: If using external services
# EMAIL_SERVICE_API_KEY=your_email_api_key
# SMS_SERVICE_API_KEY=your_sms_api_key