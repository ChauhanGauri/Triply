<% const pageTitle = typeof title !== 'undefined' ? `${title} Â· Triply` : 'Triply | Seamless Travel Management'; %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJq0Zt2CeiQp2G7CvsA5DkG8JbDyZ0nUdj0gDjtEOhK7J9UdS3GJ5t9UJ0Z" crossorigin="anonymous">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

  <!-- Animate.css for lightweight animations -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" integrity="sha512-cNbjR7f2Fk7OZGmGQ9P0KMcG6FZo+R7WkL1sIwoMvVJE9idh+NROm4tW7x1YgnSUZXoqBYCjTKOZcXLR9MXfQw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Custom Enhancements -->
  <link rel="stylesheet" href="/css/ui-enhancements.css">
</head>
<body class="d-flex flex-column min-vh-100" data-bs-theme="light" style="font-family: 'Inter', sans-serif;">
  <a class="visually-hidden-focusable" href="#mainContent">Skip to main content</a>

  <!-- Header -->
  <header class="border-bottom shadow-sm" role="banner">
    <nav class="navbar navbar-expand-lg navbar-light bg-white container py-2" aria-label="Primary navigation">
      <div class="container-fluid px-0">
        <a class="navbar-brand fw-bold text-primary" href="/">
          <i class="bi bi-bus-front me-2"></i>Triply
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="primaryNav">
          <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
            <li class="nav-item">
              <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'home') { %>active fw-semibold<% } %>" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <% if (activePage === 'schedules') { %>active fw-semibold<% } %>" href="/schedules">Schedules</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <% if (activePage === 'routes') { %>active fw-semibold<% } %>" href="/routes">Routes</a>
            </li>
            <% if (locals && locals.currentUser) { %>
              <li class="nav-item">
                <a class="nav-link <% if (activePage === 'dashboard') { %>active fw-semibold<% } %>" href="<%= locals.currentUser.role === 'admin' ? '/admin/dashboard' : `/user/${locals.currentUser.id}/dashboard` %>">
                  Dashboard
                </a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-person-circle"></i>
                  <span class="fw-semibold"><%= locals.currentUser.name || 'Account' %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                  <% if (locals.currentUser.role !== 'admin') { %>
                    <li><a class="dropdown-item" href="/user/<%= locals.currentUser.id %>/bookings">My Bookings</a></li>
                  <% } %>
                  <li><a class="dropdown-item" href="/profile">Profile</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item text-danger" href="/auth/logout">Logout</a></li>
                </ul>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="btn btn-primary rounded-pill px-3" href="/auth/user/login">
                  <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main id="mainContent" class="flex-grow-1" role="main">
    <div class="container py-4 py-md-5">
      <%- body %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white mt-auto" role="contentinfo">
    <div class="container py-4">
      <div class="row gy-4">
        <div class="col-md-4">
          <h5 class="fw-semibold mb-3">Triply</h5>
          <p class="text-white-50 mb-0">Reliable travel scheduling and passenger management for modern transport teams.</p>
        </div>
        <div class="col-md-4">
          <h6 class="fw-semibold mb-3">Quick Links</h6>
          <ul class="list-unstyled text-white-50 mb-0">
            <li><a class="text-white-50 text-decoration-none" href="/schedules">Upcoming Schedules</a></li>
            <li><a class="text-white-50 text-decoration-none" href="/routes">Browse Routes</a></li>
            <li><a class="text-white-50 text-decoration-none" href="/support">Support</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h6 class="fw-semibold mb-3">Contact</h6>
          <p class="text-white-50 mb-1"><i class="bi bi-envelope me-2"></i>support@triply.com</p>
          <p class="text-white-50 mb-0"><i class="bi bi-telephone me-2"></i>+91 98765 43210</p>
        </div>
      </div>
      <hr class="border-secondary my-4">
      <div class="d-flex flex-column flex-md-row justify-content-between text-white-50 small">
        <span>&copy; <%= new Date().getFullYear() %> Triply. All rights reserved.</span>
        <div class="d-flex gap-3">
          <a class="text-white-50 text-decoration-none" href="/privacy">Privacy Policy</a>
          <a class="text-white-50 text-decoration-none" href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bottom Navigation (Mobile Only) -->
  <% if (locals && locals.currentUser && locals.currentUser.role !== 'admin') { %>
    <%- include('partials/bottom-nav', { currentPage: typeof currentPage !== 'undefined' ? currentPage : 'home' }) %>
  <% } %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="/js/ui.js" defer></script>
</body>
</html>
