<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "My Bookings" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/user/<%= user.id %>/dashboard">
        <i class="bi bi-bus-front"></i> Transport System
      </a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/user/<%= user.id %>/dashboard">Dashboard</a>
        <a class="nav-link active" href="/user/<%= user.id %>/bookings">My Bookings</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Success/Error Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-journal-bookmark"></i> My Bookings</h2>
          <a href="/user/<%= user.id %>/bookings/new" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Book New Trip
          </a>
        </div>

        <div class="card">
          <div class="card-body">
            <% if (bookings && bookings.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead class="table-dark">
                    <tr>
                      <th>Booking ID</th>
                      <th>Route</th>
                      <th>Date & Time</th>
                      <th>Passengers</th>
                      <th>Total Price</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% bookings.forEach(booking => { %>
                      <tr>
                        <td>
                          <% if (booking.bookingReference) { %>
                            <strong class="text-primary"><%= booking.bookingReference %></strong>
                          <% } else { %>
                            <span class="text-muted">Legacy</span>
                          <% } %>
                          <br>
                          <small class="text-muted">
                            <%= new Date(booking.createdAt).toLocaleDateString() %>
                          </small>
                        </td>
                        <td>
                          <strong><%= booking.schedule?.route?.routeNumber || 'N/A' %></strong><br>
                          <small class="text-muted">
                            <%= booking.schedule?.route?.origin || 'N/A' %> → 
                            <%= booking.schedule?.route?.destination || 'N/A' %>
                          </small>
                        </td>
                        <td>
                          <% if (booking.schedule?.journeyDate) { %>
                            <%= new Date(booking.schedule.journeyDate).toLocaleDateString() %>
                          <% } else { %>
                            N/A
                          <% } %>
                          <br>
                          <small class="text-muted">
                            <%= booking.schedule?.departureTime || 'N/A' %>
                          </small>
                        </td>
                        <td>
                          <span class="badge bg-info">
                            <%= booking.seats || booking.passengers || 1 %> 
                            <%= (booking.seats || booking.passengers || 1) === 1 ? 'seat' : 'seats' %>
                          </span>
                          <% if (booking.passengers && booking.passengers.length > 0) { %>
                            <br>
                            <small class="text-muted">
                              <%= booking.passengers.map(p => p.name).join(', ') %>
                            </small>
                          <% } %>
                        </td>
                        <td>
                          <strong>₹<%= booking.totalPrice || booking.price || 'N/A' %></strong>
                          <% if (booking.paymentMethod) { %>
                            <br>
                            <small class="text-muted">via <%= booking.paymentMethod.toUpperCase() %></small>
                          <% } %>
                        </td>
                        <td>
                          <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'warning' %>">
                            <%= booking.status?.charAt(0).toUpperCase() + booking.status?.slice(1) || 'Unknown' %>
                          </span>
                          <% if (booking.paymentStatus) { %>
                            <br>
                            <small class="badge bg-<%= booking.paymentStatus === 'completed' ? 'success' : booking.paymentStatus === 'failed' ? 'danger' : 'warning' %>">
                              <%= booking.paymentStatus %>
                            </small>
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group-vertical" role="group">
                            <a href="/user/<%= user.id %>/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-info mb-1">
                              <i class="bi bi-eye"></i> View
                            </a>
                            <% if (booking.status === 'confirmed') { %>
                              <button class="btn btn-sm btn-outline-danger" onclick="cancelBooking('<%= booking._id %>')">
                                <i class="bi bi-x-circle"></i> Cancel
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-journal-bookmark fs-1 text-muted"></i>
                <h5 class="mt-3">No Bookings Yet</h5>
                <p class="text-muted">You haven't made any bookings yet. Book your first trip!</p>
                <a href="/user/<%= user.id %>/bookings/new" class="btn btn-success">
                  <i class="bi bi-plus-circle"></i> Book Your First Trip
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function cancelBooking(bookingId) {
      if (confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
        fetch(`/user/<%= user.id %>/bookings/${bookingId}/cancel`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert(data.message);
            location.reload();
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error cancelling booking');
        });
      }
    }
  </script>
</body>
</html>