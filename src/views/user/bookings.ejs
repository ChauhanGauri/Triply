<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "My Bookings" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1E293B;
    }

    .dashboard-container {
      background: #FFFFFF;
      min-height: 100vh;
      border-radius: 20px 0 0 20px;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.8s ease-out;
    }

    .user-header {
      background: #1E293B;
      color: white;
      padding: 2rem 0;
      border-radius: 20px 0 0 0;
    }

    .user-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #EC4899 0%, #F59E0B 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #DB2777 0%, #D97706 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #EC4899;
      color: #EC4899;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #EC4899;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      text-decoration: none;
    }

    .booking-card {
      background: #FFFFFF;
      border-radius: 16px;
      padding: 1.5rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.08);
      border: 1px solid #F1F5F9;
    }

    .booking-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(30, 41, 59, 0.15);
    }

    .status-badge {
      font-size: 0.8em;
      padding: 0.4em 0.8em;
      border-radius: 20px;
      font-weight: 600;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
  </style>
</head>
<body>

  <!-- Header -->
  <div class="user-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <a href="/user/<%= user.id %>/dashboard" class="text-decoration-none">
            <h1 class="user-title mb-1">
              <i class="bi bi-bus-front me-3"></i>
              Triply
            </h1>
          </a>
          <p class="mb-0 opacity-75">My Bookings</p>
        </div>
        <div class="col-auto">
          <div class="d-flex gap-2 flex-wrap">
            <a href="/user/<%= user.id %>/dashboard" class="btn-outline-custom">
              <i class="bi bi-house"></i> Dashboard
            </a>
            <a href="/user/<%= user.id %>/bookings/new" class="btn-custom">
              <i class="bi bi-plus-circle"></i> Book New Trip
            </a>
            <a href="/auth/logout" class="btn-outline-custom">
              <i class="bi bi-box-arrow-right"></i> Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container dashboard-container">
    <!-- Success/Error Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="user-title" style="font-size: 1.5rem;"><i class="bi bi-journal-bookmark me-2"></i> My Bookings</h2>
          
        </div>

        <div class="booking-card">
          <div class="card-body p-0">
            <% if (bookings && bookings.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead class="table-dark">
                    <tr>
                      <th>Booking ID</th>
                      <th>Route</th>
                      <th>Date & Time</th>
                      <th>Passengers</th>
                      <th>Total Price</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% bookings.forEach(booking => { %>
                      <tr data-booking-id="<%= booking._id %>">
                        <td>
                          <% if (booking.bookingReference) { %>
                            <strong class="text-primary"><%= booking.bookingReference %></strong>
                          <% } else { %>
                            <span class="text-muted">Legacy</span>
                          <% } %>
                          <br>
                          <small class="text-muted">
                            <%= new Date(booking.createdAt).toLocaleDateString() %>
                          </small>
                        </td>
                        <td>
                          <strong><%= booking.schedule?.route?.routeNumber || 'N/A' %></strong><br>
                          <small class="text-muted">
                            <%= booking.schedule?.route?.origin || 'N/A' %> → 
                            <%= booking.schedule?.route?.destination || 'N/A' %>
                          </small>
                        </td>
                        <td>
                          <% if (booking.schedule?.journeyDate) { %>
                            <%= new Date(booking.schedule.journeyDate).toLocaleDateString() %>
                          <% } else { %>
                            N/A
                          <% } %>
                          <br>
                          <small class="text-muted">
                            <%= booking.schedule?.departureTime || 'N/A' %>
                          </small>
                        </td>
                        <td>
                          <span class="badge bg-info">
                            <%= booking.seats || booking.passengers || 1 %> 
                            <%= (booking.seats || booking.passengers || 1) === 1 ? 'seat' : 'seats' %>
                          </span>
                          <% if (booking.passengers && booking.passengers.length > 0) { %>
                            <br>
                            <small class="text-muted">
                              <%= booking.passengers.map(p => p.name).join(', ') %>
                            </small>
                          <% } %>
                        </td>
                        <td>
                          <strong>₹<%= booking.totalPrice || booking.price || 'N/A' %></strong>
                          <% if (booking.paymentMethod) { %>
                            <br>
                            <small class="text-muted">via <%= booking.paymentMethod.toUpperCase() %></small>
                          <% } %>
                        </td>
                        <td>
                          <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'warning' %>">
                            <%= booking.status?.charAt(0).toUpperCase() + booking.status?.slice(1) || 'Unknown' %>
                          </span>
                          <% if (booking.paymentStatus) { %>
                            <br>
                            <small class="badge bg-<%= booking.paymentStatus === 'completed' ? 'success' : booking.paymentStatus === 'failed' ? 'danger' : 'warning' %>">
                              <%= booking.paymentStatus %>
                            </small>
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group-vertical" role="group">
                            <a href="/user/<%= user.id %>/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-info mb-1">
                              <i class="bi bi-eye"></i> View
                            </a>
                            <% if (booking.status === 'confirmed') { %>
                              <button class="btn btn-sm btn-outline-danger" onclick="cancelBooking('<%= booking._id %>')">
                                <i class="bi bi-x-circle"></i> Cancel
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-journal-bookmark fs-1 text-muted"></i>
                <h5 class="mt-3">No Bookings Yet</h5>
                <p class="text-muted">You haven't made any bookings yet. Book your first trip!</p>
                <a href="/user/<%= user.id %>/bookings/new" class="btn btn-success">
                  <i class="bi bi-plus-circle"></i> Book Your First Trip
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function cancelBooking(bookingId) {
      if (confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
        fetch(`/user/<%= user.id %>/bookings/${bookingId}/cancel`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert(data.message);
            location.reload();
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error cancelling booking');
        });
      }
    }
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    try {
      const socket = io();
      // join this user's personal room
      socket.emit('joinRoom', `user_<%= user.id %>`);

          socket.on('bookingCancelled', (payload) => {
        try {
          const booking = payload.booking;
          // find table row by data attribute
          const row = document.querySelector(`table.table-hover tbody tr[data-booking-id="${booking._id}"]`);
          if (row) {
            const statusCell = row.querySelectorAll('td')[5];
            if (statusCell) statusCell.innerHTML = `<span class="badge bg-danger">Cancelled</span>`;
          } else {
            // If not found, show a notification to the user
            alert('One of your bookings was cancelled by admin. Please refresh to see details.');
          }
        } catch (err) {
          console.error('Error handling bookingCancelled:', err);
        }
      });
    } catch (err) {
      console.warn('Socket client failed on user bookings page:', err.message);
    }
  </script>
</body>
</html>