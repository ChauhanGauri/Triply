  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/localStorage.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Load selected schedule data
      const scheduleData = JSON.parse(sessionStorage.getItem('selectedSchedule') || '{}');
      
      if (scheduleData.scheduleId) {
        // Populate trip summary
        document.getElementById('route-display').textContent = scheduleData.routeNumber;
        document.getElementById('origin-display').textContent = scheduleData.origin;
        document.getElementById('destination-display').textContent = scheduleData.destination;
        document.getElementById('date-display').textContent = scheduleData.date;
        document.getElementById('time-display').textContent = `${scheduleData.departure} - ${scheduleData.arrival}`;
        document.getElementById('bus-display').textContent = scheduleData.busNumber;
        document.getElementById('driver-display').textContent = scheduleData.driver;
        
        // Set form data
        document.getElementById('scheduleId').value = scheduleData.scheduleId;
        document.getElementById('pricePerPerson').textContent = scheduleData.fare;
      } else {
        // Redirect back if no schedule selected
        window.location.href = '/user/<%= user.id %>/bookings/new';
      }

      const passengerCountSelect = document.getElementById('passengerCount');
      const passengersContainer = document.getElementById('passengersContainer');

      function generatePassengerForms(count, savedData = null) {
        passengersContainer.innerHTML = '';
        
        for (let i = 1; i <= count; i++) {
          const savedPassenger = savedData && savedData.passengers && savedData.passengers[i - 1] ? savedData.passengers[i - 1] : null;
          const passengerHtml = `
            <div class="passenger-card p-3 mb-3">
              <h6 class="mb-3">
                <i class="bi bi-person"></i> Passenger ${i} Details
              </h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Full Name *</label>
                  <input type="text" class="form-control" name="passengers[${i-1}][name]" 
                         placeholder="Enter full name" value="${savedPassenger ? (savedPassenger.name || '') : ''}" required>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Age *</label>
                  <input type="number" class="form-control" name="passengers[${i-1}][age]" 
                         min="1" max="120" value="${savedPassenger ? (savedPassenger.age || '') : ''}" required>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Gender *</label>
                  <select class="form-select" name="passengers[${i-1}][gender]" required>
                    <option value="">Select</option>
                    <option value="Male" ${savedPassenger && savedPassenger.gender === 'Male' ? 'selected' : ''}>Male</option>
                    <option value="Female" ${savedPassenger && savedPassenger.gender === 'Female' ? 'selected' : ''}>Female</option>
                    <option value="Other" ${savedPassenger && savedPassenger.gender === 'Other' ? 'selected' : ''}>Other</option>
                  </select>
                </div>
              </div>
            </div>
          `;
          passengersContainer.insertAdjacentHTML('beforeend', passengerHtml);
        }
        
        // Attach auto-save listeners to all form inputs
        attachAutoSaveListeners();
      }

      function calculateTotalPrice() {
        const pricePerPerson = parseFloat(scheduleData.fare || 0);
        const passengerCount = parseInt(passengerCountSelect.value);
        
        const subtotal = pricePerPerson * passengerCount;
        const serviceCharge = subtotal * 0.02; // 2% service charge
        const gst = subtotal * 0.05; // 5% GST
        const total = subtotal + serviceCharge + gst;

        document.getElementById('passengerCountDisplay').textContent = passengerCount;
        document.getElementById('subtotal').textContent = subtotal.toFixed(2);
        document.getElementById('serviceCharge').textContent = serviceCharge.toFixed(2);
        document.getElementById('gst').textContent = gst.toFixed(2);
        document.getElementById('totalAmount').textContent = total.toFixed(2);
        document.getElementById('totalPrice').value = total.toFixed(2);
      }

      passengerCountSelect.addEventListener('change', function() {
        const savedData = LocalStorageManager.getBookingFormDraft();
        generatePassengerForms(parseInt(this.value), savedData);
        calculateTotalPrice();
        saveFormDraft(); // Save after passenger count change
      });

      // Load saved form draft from localStorage
      const savedFormData = LocalStorageManager.getBookingFormDraft();
      const initialPassengerCount = savedFormData && savedFormData.passengerCount ? savedFormData.passengerCount : 1;
      
      // Initialize
      if (savedFormData && savedFormData.passengerCount) {
        passengerCountSelect.value = savedFormData.passengerCount;
      }
      generatePassengerForms(initialPassengerCount, savedFormData);
      calculateTotalPrice();

      // Auto-save form data
      function saveFormDraft() {
        const formData = {
          passengerCount: parseInt(passengerCountSelect.value),
          passengers: []
        };
        
        // Collect passenger data
        const passengerInputs = document.querySelectorAll('[name^="passengers["]');
        const passengerCount = parseInt(passengerCountSelect.value);
        
        for (let i = 0; i < passengerCount; i++) {
          const nameInput = document.querySelector(`input[name="passengers[${i}][name]"]`);
          const ageInput = document.querySelector(`input[name="passengers[${i}][age]"]`);
          const genderSelect = document.querySelector(`select[name="passengers[${i}][gender]"]`);
          
          if (nameInput || ageInput || genderSelect) {
            formData.passengers.push({
              name: nameInput ? nameInput.value : '',
              age: ageInput ? ageInput.value : '',
              gender: genderSelect ? genderSelect.value : ''
            });
          }
        }
        
        // Only save if there's actual data
        if (formData.passengers.some(p => p.name || p.age || p.gender)) {
          LocalStorageManager.saveBookingFormDraft(formData);
        }
      }

      // Attach auto-save listeners to form inputs
      function attachAutoSaveListeners() {
        // Use debouncing to avoid too frequent saves
        let saveTimeout;
        const debouncedSave = () => {
          clearTimeout(saveTimeout);
          saveTimeout = setTimeout(saveFormDraft, 1000); // Save after 1 second of inactivity
        };
        
        // Attach to all form inputs
        const formInputs = document.querySelectorAll('#bookingForm input, #bookingForm select');
        formInputs.forEach(input => {
          input.addEventListener('input', debouncedSave);
          input.addEventListener('change', debouncedSave);
        });
      }
      
      // Initial attachment
      attachAutoSaveListeners();

      // Form validation and clear draft on successful submission
      document.getElementById('bookingForm').addEventListener('submit', function(e) {
        const passengers = document.querySelectorAll('input[name*="[name]"]');
        let allValid = true;
        
        passengers.forEach(input => {
          if (!input.value.trim()) {
            allValid = false;
            input.classList.add('is-invalid');
          } else {
            input.classList.remove('is-invalid');
          }
        });

        // Validate seat selection
        const requiredSeats = parseInt(passengerCountSelect.value) || 1;
        if (selectedSeats.length !== requiredSeats) {
          e.preventDefault();
          alert(`Please select exactly ${requiredSeats} seat(s) before proceeding.`);
          return false;
        }

        if (!allValid) {
          e.preventDefault();
          alert('Please fill in all passenger details.');
        } else {
          // Clear saved form draft on successful submission
          LocalStorageManager.clearBookingFormDraft();
        }
      });

      // Seat Selection Logic
      const seatGrid = document.querySelector('.seat-grid');
      const seatNumbersInput = document.getElementById('seatNumbersInput');
      const selectedSeatsCountSpan = document.getElementById('selectedSeatsCount');
      const requiredSeatsCountSpan = document.getElementById('requiredSeatsCount');
      
      let selectedSeats = [];
      let bookedSeats = [];
      let currentScheduleId = scheduleData.scheduleId;
      const totalSeats = 40;

      async function loadSeatAvailability(scheduleId) {
        try {
          const response = await fetch(`/api/bookings/schedule/${scheduleId}/seats`);
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          const data = await response.json();
          // Normalize booked seats to numbers for proper comparison
          bookedSeats = (data.bookedSeats || []).map(seat => parseInt(seat)).filter(seat => !isNaN(seat));
          renderSeats();
        } catch (error) {
          console.error('Error loading seat availability:', error);
          bookedSeats = [];
          renderSeats();
        }
      }

      function renderSeats() {
        seatGrid.innerHTML = '';
        for (let i = 1; i <= totalSeats; i++) {
          const seat = document.createElement('div');
          seat.className = 'seat';
          seat.textContent = i;
          seat.dataset.seatNumber = i;
          
          // Check if seat is booked (ensure both are numbers for comparison)
          const isBooked = bookedSeats.some(bookedSeat => parseInt(bookedSeat) === i);
          if (isBooked) {
            seat.classList.add('booked');
            seat.title = 'This seat is already booked';
            seat.setAttribute('aria-label', 'Seat ' + i + ' is booked and unavailable');
            // Don't add click listener for booked seats - they're disabled
          } else {
            if (selectedSeats.includes(i)) {
              seat.classList.add('selected');
            } else {
              seat.classList.add('available');
            }
            // Only add click listener for available/selected seats
            seat.addEventListener('click', handleSeatClick);
          }
          
          seatGrid.appendChild(seat);
        }
      }

      function handleSeatClick(event) {
        const seatNumber = parseInt(event.target.dataset.seatNumber);
        const requiredSeats = parseInt(passengerCountSelect.value) || 1;
        
        // Can't select booked seats (normalize comparison)
        const isBooked = bookedSeats.some(bookedSeat => parseInt(bookedSeat) === seatNumber);
        if (isBooked) {
          return;
        }
        
        // Toggle selection
        if (selectedSeats.includes(seatNumber)) {
          selectedSeats = selectedSeats.filter(s => s !== seatNumber);
        } else {
          // Check if we can add more seats
          if (selectedSeats.length < requiredSeats) {
            selectedSeats.push(seatNumber);
            selectedSeats.sort((a, b) => a - b);
          } else {
            alert(`You can only select ${requiredSeats} seat(s). Deselect a seat first.`);
            return;
          }
        }
        
        updateSeatSelection();
        renderSeats();
      }

      function updateSeatSelection() {
        selectedSeatsCountSpan.textContent = selectedSeats.length;
        seatNumbersInput.value = selectedSeats.join(',');
      }

      function resetSeatSelection() {
        selectedSeats = [];
        updateSeatSelection();
        renderSeats();
      }

      passengerCountSelect.addEventListener('change', function() {
        const savedData = LocalStorageManager.getBookingFormDraft();
        const requiredSeats = parseInt(this.value) || 1;
        requiredSeatsCountSpan.textContent = requiredSeats;
        
        generatePassengerForms(parseInt(this.value), savedData);
        calculateTotalPrice();
        saveFormDraft(); // Save after passenger count change
        
        // Reset seat selection when passenger count changes
        resetSeatSelection();
      });

      // Socket.IO for real-time seat updates
      const socket = io();
      
      socket.on('connect', () => {
        if (currentScheduleId) {
          socket.emit('joinSchedule', currentScheduleId);
        }
      });

      socket.on('seatsUpdated', (data) => {
        if (data.scheduleId === currentScheduleId) {
          bookedSeats = data.bookedSeats || [];
          
          // Remove any selected seats that are now booked
          selectedSeats = selectedSeats.filter(seat => !bookedSeats.includes(seat));
          updateSeatSelection();
          renderSeats();
          
          // Show notification
          const toast = document.createElement('div');
          toast.className = 'alert alert-warning position-fixed top-0 end-0 m-3';
          toast.style.zIndex = '9999';
          toast.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Seat availability updated!';
          document.body.appendChild(toast);
          setTimeout(() => toast.remove(), 3000);
        }
      });

      // Load initial seat availability
      if (currentScheduleId) {
        loadSeatAvailability(currentScheduleId);
      }
    });
  </script>
