<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Book a Trip" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1E293B;
    }

    .dashboard-container {
      background: #FFFFFF;
      min-height: 100vh;
      border-radius: 20px 0 0 20px;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.8s ease-out;
    }

    .user-header {
      background: #1E293B;
      color: white;
      padding: 2rem 0;
      border-radius: 20px 0 0 0;
    }

    .user-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #a78bfa 0%, #4f378b 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #7c3aed 0%, #4f378b 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #a78bfa;
      color: #4f378b;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #a78bfa;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      text-decoration: none;
    }

    .booking-card {
      background: #FFFFFF;
      border: 2px solid #E2E8F0;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(30, 41, 59, 0.08);
      transition: all 0.3s ease;
    }

    .booking-card:hover {
      border-color: #EC4899;
      box-shadow: 0 8px 25px rgba(236, 72, 153, 0.15);
    }

    .form-control:focus {
      border-color: #EC4899;
      box-shadow: 0 0 0 0.2rem rgba(236, 72, 153, 0.25);
    }

    .passenger-card {
      border: 2px solid #E2E8F0;
      border-radius: 12px;
      transition: all 0.3s ease;
      background: #FFFFFF;
      box-shadow: 0 2px 8px rgba(30, 41, 59, 0.08);
    }

    .passenger-card:focus-within {
      border-color: #EC4899;
      box-shadow: 0 0 0 0.2rem rgba(236, 72, 153, 0.25);
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Seat Selection Styles */
    .seat-layout-container {
      background: #F8FAFC;
      border-radius: 15px;
      padding: 2rem;
      border: 2px solid #E2E8F0;
    }

    .driver-section {
      display: flex;
      justify-content: flex-end;
      padding-right: 2rem;
      margin-bottom: 1rem;
    }

    .driver-icon {
      background: #1E293B;
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .seat-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
      max-width: 400px;
      margin: 0 auto;
    }

    .seat {
      aspect-ratio: 1;
      border: 2px solid #CBD5E1;
      border-radius: 10px;
      background: #FFFFFF;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 0.9rem;
      color: #64748B;
      position: relative;
    }

    .seat.available:hover {
      background: #E0F2FE;
      border-color: #0EA5E9;
      transform: scale(1.05);
      color: #0EA5E9;
    }

    .seat.selected {
      background: #10B981;
      border-color: #059669;
      color: white;
      transform: scale(1.05);
    }

    .seat.booked {
      background: #64748B;
      border-color: #475569;
      color: white;
      cursor: not-allowed;
      opacity: 0.6;
      pointer-events: none;
      user-select: none;
    }

    .seat-legend {
      display: flex;
      gap: 2rem;
      justify-content: center;
      padding-top: 1rem;
      border-top: 2px solid #E2E8F0;
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      color: #64748B;
    }

    .seat-demo {
      width: 30px;
      height: 30px;
      border-radius: 6px;
      border: 2px solid #CBD5E1;
    }

    .seat-demo.available {
      background: #FFFFFF;
      border-color: #CBD5E1;
    }

    .seat-demo.selected {
      background: #10B981;
      border-color: #059669;
    }

    .seat-demo.booked {
      background: #64748B;
      border-color: #475569;
    }
  </style>
</head>
<body>

  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-100">
      <div class="col dashboard-container">
  <div class="user-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <a href="/user/<%= user.id %>/dashboard" class="text-decoration-none">
            <h1 class="user-title">
              <i class="bi bi-bus-front me-3"></i>
              Triply
            </h1>
          </a>
          <p class="mb-0 opacity-75">New Booking</p>
        </div>
        <div class="col-auto">
          <a href="/user/<%= user.id %>/dashboard" class="btn-outline-custom me-2">
            <i class="fas fa-tachometer-alt"></i> Dashboard
          </a>
          <a href="/user/<%= user.id %>/bookings" class="btn-outline-custom me-2">
            <i class="fas fa-list"></i> My Bookings
          </a>
          <a href="/auth/logout" class="btn-outline-custom">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <!-- Error/Success Messages -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="booking-card">
          <div class="card-header">
            <h4 class="mb-0">
              <i class="bi bi-ticket"></i> Book a Trip
            </h4>
          </div>
          <div class="card-body">
            <% if (schedules && schedules.length > 0) { %>
              <form action="/user/<%= user.id %>/bookings" method="POST">
                <div class="mb-3">
                  <label for="schedule" class="form-label">Select Schedule *</label>
                  <select class="form-select" id="schedule" name="schedule" required>
                    <option value="">Choose your trip...</option>
                    <% schedules.forEach(schedule => { %>
                      <option value="<%= schedule._id %>" data-price="<%= schedule.route.fare %>">
                        <strong><%= schedule.route.routeNumber %></strong> - 
                        <%= schedule.route.origin %> → <%= schedule.route.destination %> |
                        <%= new Date(schedule.journeyDate).toLocaleDateString() %> 
                        <%= schedule.departureTime %> - <%= schedule.arrivalTime %> |
                        ₹<%= schedule.route.fare %> |
                        <%= schedule.availableSeats %> seats available
                      </option>
                    <% }) %>
                  </select>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="passengers" class="form-label">Number of Passengers *</label>
                    <input type="number" class="form-control" id="passengers" name="passengers" 
                           min="1" max="10" value="1" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label">Total Price</label>
                    <div class="input-group">
                      <span class="input-group-text">₹</span>
                      <input type="text" class="form-control" id="totalPrice" readonly>
                      <input type="hidden" name="totalPrice" id="totalPriceHidden">
                    </div>
                  </div>
                </div>

                <!-- Seat Selection -->
                <div class="mb-4" id="seatSelectionContainer" style="display: none;">
                  <label class="form-label">Select Your Seats *</label>
                  <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Please select <span id="requiredSeatsCount">1</span> seat(s).
                    Selected: <span id="selectedSeatsCount">0</span>
                  </div>
                  
                  <div class="seat-layout-container">
                    <!-- Bus Driver Section -->
                    <div class="driver-section mb-3">
                      <div class="driver-icon">
                        <i class="bi bi-person-circle fs-4"></i> Driver
                      </div>
                    </div>

                    <!-- Seat Grid -->
                    <div class="seat-grid">
                      <!-- Seats will be generated dynamically -->
                    </div>

                    <!-- Legend -->
                    <div class="seat-legend mt-3">
                      <div class="legend-item">
                        <div class="seat-demo available"></div>
                        <span>Available</span>
                      </div>
                      <div class="legend-item">
                        <div class="seat-demo selected"></div>
                        <span>Selected</span>
                      </div>
                      <div class="legend-item">
                        <div class="seat-demo booked"></div>
                        <span>Booked</span>
                      </div>
                    </div>
                  </div>

                  <input type="hidden" name="seatNumbers" id="seatNumbersInput">
                </div>

                <div class="mb-3">
                  <label for="passengerDetails" class="form-label">Passenger Details</label>
                  <textarea class="form-control" id="passengerDetails" name="passengerDetails" 
                            rows="3" placeholder="Enter passenger names (one per line)"></textarea>
                </div>

                <div class="mb-3">
                  <label for="contactPhone" class="form-label">Contact Phone</label>
                  <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                         placeholder="Your contact number">
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/user/<%= user.id %>/bookings" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Bookings
                  </a>
                  <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Book Now
                  </button>
                </div>
              </form>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-calendar-x fs-1 text-muted"></i>
                <h5 class="mt-3">No Available Schedules</h5>
                <p class="text-muted">There are currently no available trips to book.</p>
                <a href="/user/<%= user.id %>/dashboard" class="btn btn-primary">
                  Back to Dashboard
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Check if all required elements exist
    const scheduleSelect = document.getElementById('schedule');
    const passengersInput = document.getElementById('passengers');
    const totalPriceDisplay = document.getElementById('totalPrice');
    const totalPriceHidden = document.getElementById('totalPriceHidden');
    const seatSelectionContainer = document.getElementById('seatSelectionContainer');
    const seatGrid = document.querySelector('.seat-grid');
    const seatNumbersInput = document.getElementById('seatNumbersInput');
    const selectedSeatsCountSpan = document.getElementById('selectedSeatsCount');
    const requiredSeatsCountSpan = document.getElementById('requiredSeatsCount');
    
      scheduleSelect: !!scheduleSelect,
      seatSelectionContainer: !!seatSelectionContainer,
      seatGrid: !!seatGrid
    });
    
    let selectedSeats = [];
    let bookedSeats = [];
    let currentScheduleId = null;
    const totalSeats = 40;

    function updateTotalPrice() {
      const selectedOption = scheduleSelect.options[scheduleSelect.selectedIndex];
      const price = selectedOption ? parseFloat(selectedOption.dataset.price) || 0 : 0;
      const passengers = parseInt(passengersInput.value) || 1;
      const total = price * passengers;
      
      totalPriceDisplay.value = total.toFixed(2);
      totalPriceHidden.value = total.toFixed(2);
    }

    async function loadSeatAvailability(scheduleId) {
      try {
        const response = await fetch(`/api/bookings/schedule/${scheduleId}/seats`);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const data = await response.json();
          const data = await response.json();
          // Normalize booked seats to numbers for proper comparison
          bookedSeats = (data.bookedSeats || []).map(seat => parseInt(seat)).filter(seat => !isNaN(seat));
        renderSeats();
      } catch (error) {
        console.error('Error loading seat availability:', error);
        bookedSeats = [];
        renderSeats();
      }
    }

    function renderSeats() {
      seatGrid.innerHTML = '';
      for (let i = 1; i <= totalSeats; i++) {
        const seat = document.createElement('div');
        seat.className = 'seat';
        seat.textContent = i;
        seat.dataset.seatNumber = i;
        
        // Check if seat is booked (ensure both are numbers for comparison)
        const isBooked = bookedSeats.some(bookedSeat => parseInt(bookedSeat) === i);
        if (isBooked) {
          seat.classList.add('booked');
          seat.title = 'This seat is already booked';
          seat.setAttribute('aria-label', 'Seat ' + i + ' is booked and unavailable');
          // Don't add click listener for booked seats - they're disabled
        } else {
          if (selectedSeats.includes(i)) {
            seat.classList.add('selected');
          } else {
            seat.classList.add('available');
          }
          // Only add click listener for available/selected seats
          seat.addEventListener('click', handleSeatClick);
        }
        
        seatGrid.appendChild(seat);
      }
    }

    function handleSeatClick(event) {
      const seatNumber = parseInt(event.target.dataset.seatNumber);
      const requiredSeats = parseInt(passengersInput.value) || 1;
      
      // Can't select booked seats (normalize comparison)
      const isBooked = bookedSeats.some(bookedSeat => parseInt(bookedSeat) === seatNumber);
      if (isBooked) {
        return;
      }
      
      // Toggle selection
      if (selectedSeats.includes(seatNumber)) {
        selectedSeats = selectedSeats.filter(s => s !== seatNumber);
      } else {
        // Check if we can add more seats
        if (selectedSeats.length < requiredSeats) {
          selectedSeats.push(seatNumber);
          selectedSeats.sort((a, b) => a - b);
        } else {
          alert(`You can only select ${requiredSeats} seat(s). Deselect a seat first.`);
          return;
        }
      }
      
      updateSeatSelection();
      renderSeats();
    }

    function updateSeatSelection() {
      selectedSeatsCountSpan.textContent = selectedSeats.length;
      seatNumbersInput.value = selectedSeats.join(',');
    }

    function resetSeatSelection() {
      selectedSeats = [];
      updateSeatSelection();
      renderSeats();
    }

    scheduleSelect.addEventListener('change', async function() {
      updateTotalPrice();
      const scheduleId = this.value;
      
      if (scheduleId) {
        currentScheduleId = scheduleId;
        seatSelectionContainer.style.display = 'block';
        resetSeatSelection();
        await loadSeatAvailability(scheduleId);
      } else {
        seatSelectionContainer.style.display = 'none';
        currentScheduleId = null;
        resetSeatSelection();
      }
    });

    passengersInput.addEventListener('input', function() {
      updateTotalPrice();
      const requiredSeats = parseInt(this.value) || 1;
      requiredSeatsCountSpan.textContent = requiredSeats;
      
      // Reset seat selection when passenger count changes
      resetSeatSelection();
    });

    // Form validation before submit
    document.querySelector('form').addEventListener('submit', function(e) {
      const requiredSeats = parseInt(passengersInput.value) || 1;
      
      if (currentScheduleId && selectedSeats.length !== requiredSeats) {
        e.preventDefault();
        alert(`Please select exactly ${requiredSeats} seat(s) before booking.`);
        return false;
      }
    });

    // Socket.IO for real-time seat updates
    const socket = io();
    
    socket.on('connect', () => {
      // Join schedule room when a schedule is selected
      if (currentScheduleId) {
        socket.emit('joinSchedule', currentScheduleId);
      }
    });

    socket.on('seatsUpdated', (data) => {
      if (data.scheduleId === currentScheduleId) {
        bookedSeats = data.bookedSeats || [];
        
        // Remove any selected seats that are now booked
        selectedSeats = selectedSeats.filter(seat => !bookedSeats.includes(seat));
        updateSeatSelection();
        renderSeats();
        
        // Show notification
        const toast = document.createElement('div');
        toast.className = 'alert alert-warning position-fixed top-0 end-0 m-3';
        toast.style.zIndex = '9999';
        toast.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Seat availability updated!';
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
      }
    });

    // Update socket room when schedule changes
    scheduleSelect.addEventListener('change', function() {
      if (currentScheduleId) {
        socket.emit('leaveSchedule', currentScheduleId);
      }
      if (this.value) {
        socket.emit('joinSchedule', this.value);
      }
    });

    // Initialize
    updateTotalPrice();
  </script>
  </div>
</body>
</html>