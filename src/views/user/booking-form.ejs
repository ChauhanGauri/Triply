<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Book a Trip" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1E293B;
    }

    .dashboard-container {
      background: #FFFFFF;
      min-height: 100vh;
      border-radius: 20px 0 0 20px;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.8s ease-out;
    }

    .user-header {
      background: #1E293B;
      color: white;
      padding: 2rem 0;
      border-radius: 20px 0 0 0;
    }

    .user-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #EC4899 0%, #F59E0B 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #DB2777 0%, #D97706 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #EC4899;
      color: #EC4899;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #EC4899;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      text-decoration: none;
    }

    .booking-card {
      background: #FFFFFF;
      border: 2px solid #E2E8F0;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(30, 41, 59, 0.08);
      transition: all 0.3s ease;
    }

    .booking-card:hover {
      border-color: #EC4899;
      box-shadow: 0 8px 25px rgba(236, 72, 153, 0.15);
    }

    .form-control:focus {
      border-color: #EC4899;
      box-shadow: 0 0 0 0.2rem rgba(236, 72, 153, 0.25);
    }

    .passenger-card {
      border: 2px solid #E2E8F0;
      border-radius: 12px;
      transition: all 0.3s ease;
      background: #FFFFFF;
      box-shadow: 0 2px 8px rgba(30, 41, 59, 0.08);
    }

    .passenger-card:focus-within {
      border-color: #EC4899;
      box-shadow: 0 0 0 0.2rem rgba(236, 72, 153, 0.25);
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
  </style>
</head>
<body>

  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-100">
      <div class="col dashboard-container">
  <div class="user-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <a href="/user/<%= user.id %>/dashboard" class="text-decoration-none">
            <h1 class="user-title">
              <i class="bi bi-bus-front me-3"></i>
              Triply
            </h1>
          </a>
          <p class="mb-0 opacity-75">New Booking</p>
        </div>
        <div class="col-auto">
          <a href="/user/<%= user.id %>/dashboard" class="btn-outline-custom me-2">
            <i class="fas fa-tachometer-alt"></i> Dashboard
          </a>
          <a href="/user/<%= user.id %>/bookings" class="btn-outline-custom me-2">
            <i class="fas fa-list"></i> My Bookings
          </a>
          <a href="/auth/logout" class="btn-outline-custom">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <!-- Error/Success Messages -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="booking-card">
          <div class="card-header">
            <h4 class="mb-0">
              <i class="bi bi-ticket"></i> Book a Trip
            </h4>
          </div>
          <div class="card-body">
            <% if (schedules && schedules.length > 0) { %>
              <form action="/user/<%= user.id %>/bookings" method="POST">
                <div class="mb-3">
                  <label for="schedule" class="form-label">Select Schedule *</label>
                  <select class="form-select" id="schedule" name="schedule" required>
                    <option value="">Choose your trip...</option>
                    <% schedules.forEach(schedule => { %>
                      <option value="<%= schedule._id %>" data-price="<%= schedule.route.fare %>">
                        <strong><%= schedule.route.routeNumber %></strong> - 
                        <%= schedule.route.origin %> → <%= schedule.route.destination %> |
                        <%= new Date(schedule.journeyDate).toLocaleDateString() %> 
                        <%= schedule.departureTime %> - <%= schedule.arrivalTime %> |
                        ₹<%= schedule.route.fare %> |
                        <%= schedule.availableSeats %> seats available
                      </option>
                    <% }) %>
                  </select>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="passengers" class="form-label">Number of Passengers *</label>
                    <input type="number" class="form-control" id="passengers" name="passengers" 
                           min="1" max="10" value="1" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label">Total Price</label>
                    <div class="input-group">
                      <span class="input-group-text">₹</span>
                      <input type="text" class="form-control" id="totalPrice" readonly>
                      <input type="hidden" name="totalPrice" id="totalPriceHidden">
                    </div>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="passengerDetails" class="form-label">Passenger Details</label>
                  <textarea class="form-control" id="passengerDetails" name="passengerDetails" 
                            rows="3" placeholder="Enter passenger names (one per line)"></textarea>
                </div>

                <div class="mb-3">
                  <label for="contactPhone" class="form-label">Contact Phone</label>
                  <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                         placeholder="Your contact number">
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/user/<%= user.id %>/bookings" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Bookings
                  </a>
                  <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Book Now
                  </button>
                </div>
              </form>
            <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-calendar-x fs-1 text-muted"></i>
                <h5 class="mt-3">No Available Schedules</h5>
                <p class="text-muted">There are currently no available trips to book.</p>
                <a href="/user/<%= user.id %>/dashboard" class="btn btn-primary">
                  Back to Dashboard
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const scheduleSelect = document.getElementById('schedule');
    const passengersInput = document.getElementById('passengers');
    const totalPriceDisplay = document.getElementById('totalPrice');
    const totalPriceHidden = document.getElementById('totalPriceHidden');

    function updateTotalPrice() {
      const selectedOption = scheduleSelect.options[scheduleSelect.selectedIndex];
      const price = selectedOption ? parseFloat(selectedOption.dataset.price) || 0 : 0;
      const passengers = parseInt(passengersInput.value) || 1;
      const total = price * passengers;
      
      totalPriceDisplay.value = total.toFixed(2);
      totalPriceHidden.value = total.toFixed(2);
    }

    scheduleSelect.addEventListener('change', updateTotalPrice);
    passengersInput.addEventListener('input', updateTotalPrice);

    // Initialize
    updateTotalPrice();
  </script>
  </div>
</body>
</html>