<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Passenger Manifests" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    :root {
      --primary-dark: #1E293B;
      --primary-blue: #3B82F6;
      --accent-amber: #F59E0B;
      --accent-pink: #EC4899;
      --neutral-light: #F8FAFC;
      --neutral-gray: #F1F5F9;
    }

    body {
      background: linear-gradient(135deg, #F8FAFC 0%, #FFFFFF 100%);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      min-height: 100vh;
      margin: 0;
    }

    .dashboard-container {
      background: var(--neutral-light);
      min-height: 100vh;
    }

    .dashboard-header {
      background: var(--primary-dark);
      color: white;
      padding: 2rem 0;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.15);
    }

    .dashboard-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #D97706 0%, #B45309 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #F59E0B;
      color: #F59E0B;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #F59E0B;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
      text-decoration: none;
    }

    .section-card {
      background: #FFFFFF;
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.08);
      border: 1px solid #F1F5F9;
    }

    .section-title {
      color: #1E293B;
      font-weight: 600;
      margin-bottom: 1.5rem;
      font-size: 1.25rem;
    }

    .manifest-card {
      transition: transform 0.2s ease-in-out;
      border-left: 4px solid #3B82F6;
      background: #FFFFFF;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(30, 41, 59, 0.06);
    }

    .manifest-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(30, 41, 59, 0.12);
    }

    .status-badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.6rem;
      border-radius: 20px;
      font-weight: 600;
    }

    .passenger-count {
      font-size: 1.1rem;
      font-weight: 600;
    }

    .btn-secondary {
      background: #6B7280;
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-secondary:hover {
      background: #4B5563;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(107, 114, 128, 0.3);
    }

    .btn-warning {
      background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-warning:hover {
      background: linear-gradient(135deg, #D97706 0%, #B45309 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
    }

    .btn-outline-primary {
      background: transparent;
      border: 2px solid #3B82F6;
      color: #3B82F6;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
      background: #3B82F6;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);
    }

    @media print {
      .no-print { display: none; }
      .manifest-card { break-inside: avoid; }
    }

    .spin {
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    @media (max-width: 768px) {
      .dashboard-container {
        border-radius: 0;
        margin: 0;
      }

      .dashboard-header {
        border-radius: 0;
        text-align: center;
      }
    }
  </style>
</head>
<body>

  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-100">
      <!-- Main Content -->
      <div class="col dashboard-container">

        <!-- Header -->
        <div class="dashboard-header">
          <div class="container">
            <div class="row align-items-center">
              <div class="col">
                <a href="/admin/dashboard" class="text-decoration-none">
                  <h1 class="dashboard-title mb-1">
                    <i class="bi bi-bus-front me-3"></i>
                    Triply
                  </h1>
                </a>
                <p class="mb-0 opacity-75">Admin Dashboard</p>
              </div>
              <div class="col-auto">
                <div class="d-flex gap-2 flex-wrap">
                  <a href="/admin/bookings" class="btn-custom">
                    <i class="bi bi-ticket-detailed"></i>
                    Bookings
                  </a>
                  <a href="/admin/routes" class="btn-custom">
                    <i class="bi bi-map"></i>
                    Routes
                  </a>
                  <a href="/admin/schedules" class="btn-custom">
                    <i class="bi bi-calendar-event"></i>
                    Schedules
                  </a>
                  <a href="/admin/users" class="btn-custom">
                    <i class="bi bi-people"></i>
                    Users
                  </a>
                  <a href="/auth/logout" class="btn-outline-custom">
                    <i class="bi bi-box-arrow-right"></i>
                    Logout
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="container py-4">
          <!-- Error/Success Messages -->
          <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle-fill me-2"></i>
              <%= success %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <div class="section-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="section-title mb-0"><i class="bi bi-people-fill me-2"></i> Passenger Manifests</h2>
              <div class="d-flex gap-2">
                <button class="btn btn-warning no-print" onclick="syncManifests()">
                  <i class="bi bi-arrow-clockwise"></i> Sync All Bookings
                </button>
                <button class="btn btn-outline-primary no-print" onclick="window.print()">
                  <i class="bi bi-printer"></i> Print All
                </button>
                <a href="/admin/schedules" class="btn btn-secondary no-print">
                  <i class="bi bi-arrow-left"></i> Back to Schedules
                </a>
              </div>
            </div>

            <p class="text-muted mb-4">Manage passenger lists for scheduled buses</p>

    <!-- Manifests Grid -->
    <div class="row">
      <% if (manifests && manifests.length > 0) { %>
        <% manifests.forEach(manifest => { %>
          <div class="col-lg-6 col-xl-4 mb-4">
            <div class="card manifest-card h-100">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-0 fw-bold">
                    <i class="bi bi-bus-front text-primary"></i>
                    <%= manifest.schedule?.route?.routeNumber || 'N/A' %>
                  </h6>
                  <small class="text-muted">
                    <%= manifest.schedule?.route?.origin || 'N/A' %> â†’ 
                    <%= manifest.schedule?.route?.destination || 'N/A' %>
                  </small>
                </div>
                <span class="badge status-badge bg-<%= 
                  manifest.manifestStatus === 'finalized' ? 'success' : 
                  manifest.manifestStatus === 'departed' ? 'info' : 
                  manifest.manifestStatus === 'completed' ? 'primary' : 'warning' 
                %>">
                  <%= manifest.manifestStatus.charAt(0).toUpperCase() + manifest.manifestStatus.slice(1) %>
                </span>
              </div>
              
              <div class="card-body">
                <!-- Journey Details -->
                <div class="row mb-3">
                  <div class="col-6">
                    <div class="text-center">
                      <div class="fw-bold text-primary">
                        <%= manifest.schedule?.departureTime || 'N/A' %>
                      </div>
                      <small class="text-muted">Departure</small>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-center">
                      <div class="fw-bold text-success">
                        <%= manifest.schedule?.arrivalTime || 'N/A' %>
                      </div>
                      <small class="text-muted">Arrival</small>
                    </div>
                  </div>
                </div>

                <!-- Journey Date -->
                <div class="text-center mb-3">
                  <div class="badge bg-light text-dark">
                    <i class="bi bi-calendar3"></i>
                    <% if (manifest.schedule?.journeyDate) { %>
                      <%= new Date(manifest.schedule.journeyDate).toLocaleDateString('en-IN', { 
                        weekday: 'short', 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      }) %>
                    <% } else { %>
                      Date N/A
                    <% } %>
                  </div>
                </div>

                <!-- Passenger Statistics -->
                <div class="row text-center mb-3">
                  <div class="col-6">
                    <div class="passenger-count text-primary">
                      <%= manifest.totalPassengers || 0 %>
                    </div>
                    <small class="text-muted">Passengers</small>
                  </div>
                  <div class="col-6">
                    <div class="passenger-count text-success">
                      <%= manifest.totalSeatsBooked || 0 %>
                    </div>
                    <small class="text-muted">Seats Booked</small>
                  </div>
                </div>

                <!-- Bus Details -->
                <% if (manifest.schedule?.busNumber || manifest.schedule?.driverName) { %>
                  <div class="border-top pt-2 mb-3">
                    <% if (manifest.schedule.busNumber) { %>
                      <div class="d-flex align-items-center mb-1">
                        <i class="bi bi-truck text-muted me-2"></i>
                        <small><strong>Bus:</strong> <%= manifest.schedule.busNumber %></small>
                      </div>
                    <% } %>
                    <% if (manifest.schedule.driverName) { %>
                      <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge text-muted me-2"></i>
                        <small><strong>Driver:</strong> <%= manifest.schedule.driverName %></small>
                      </div>
                    <% } %>
                  </div>
                <% } %>

                <!-- Timestamps -->
                <div class="border-top pt-2 text-muted">
                  <small>
                    <i class="bi bi-clock"></i>
                    Created: <%= new Date(manifest.createdAt).toLocaleDateString() %>
                  </small>
                  <% if (manifest.finalizedAt) { %>
                    <br>
                    <small>
                      <i class="bi bi-check-circle"></i>
                      Finalized: <%= new Date(manifest.finalizedAt).toLocaleDateString() %>
                    </small>
                  <% } %>
                  <% if (manifest.departedAt) { %>
                    <br>
                    <small>
                      <i class="bi bi-airplane-engines"></i>
                      Departed: <%= new Date(manifest.departedAt).toLocaleDateString() %>
                    </small>
                  <% } %>
                </div>
              </div>
              
              <div class="card-footer no-print">
                <div class="d-flex gap-2">
                  <a href="/admin/manifests/<%= manifest._id %>" class="btn btn-primary btn-sm flex-grow-1">
                    <i class="bi bi-eye"></i> View Details
                  </a>
                  <% if (manifest.manifestStatus === 'draft') { %>
                    <button class="btn btn-success btn-sm" onclick="finalizeManifest('<%= manifest._id %>')">
                      <i class="bi bi-check-circle"></i> Finalize
                    </button>
                  <% } %>
                  <% if (manifest.manifestStatus === 'finalized') { %>
                    <button class="btn btn-info btn-sm" onclick="markDeparted('<%= manifest._id %>')">
                      <i class="bi bi-airplane-engines"></i> Departed
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <!-- Empty State -->
        <div class="col-12">
          <div class="text-center py-5">
            <i class="bi bi-people fs-1 text-muted"></i>
            <h5 class="mt-3">No Passenger Manifests Yet</h5>
            <p class="text-muted">Passenger manifests are automatically generated when bookings are made.</p>
            <a href="/admin/schedules" class="btn btn-primary">
              <i class="bi bi-calendar-plus"></i> View Schedules
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function finalizeManifest(manifestId) {
      if (confirm('Are you sure you want to finalize this manifest? This action cannot be undone.')) {
        fetch(`/admin/manifests/${manifestId}/finalize`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            return response.json().then(data => {
              throw new Error(data.message || 'Error finalizing manifest');
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error finalizing manifest: ' + error.message);
        });
      }
    }

    function markDeparted(manifestId) {
      if (confirm('Mark this bus as departed?')) {
        fetch(`/admin/manifests/${manifestId}/departed`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            return response.json().then(data => {
              throw new Error(data.message || 'Error marking as departed');
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error marking as departed: ' + error.message);
        });
      }
    }

    function syncManifests() {
      if (confirm('This will sync all confirmed bookings to passenger manifests. This may take a few moments. Continue?')) {
        // Show loading state
        const syncBtn = event.target;
        const originalText = syncBtn.innerHTML;
        syncBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Syncing...';
        syncBtn.disabled = true;
        
        fetch('/admin/manifests/sync', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            alert('Sync started successfully! The page will reload in a few seconds to show updated manifests.');
            setTimeout(() => {
              location.reload();
            }, 3000);
          } else {
            return response.json().then(data => {
              throw new Error(data.message || 'Error starting sync');
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error starting sync: ' + error.message);
          // Restore button state
          syncBtn.innerHTML = originalText;
          syncBtn.disabled = false;
        });
      }
    }
  </script>
</body>
</html>