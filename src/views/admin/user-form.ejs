<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || (editUser ? 'Edit User' : 'Add New User') %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1E293B;
    }

    /* Unified Header (Dashboard Style) */
    .user-header {
      background: #1E293B;
      color: white;
      padding: 2rem 0;
      border-radius: 0;
    }

    .user-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #EC4899 0%, #F59E0B 100%);
      border: none;
      border-radius: 10px;
      padding: 0.5rem 1rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #DB2777 0%, #D97706 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #EC4899;
      color: #EC4899;
      border-radius: 10px;
      padding: 0.5rem 1rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #EC4899;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(236, 72, 153, 0.3);
      text-decoration: none;
    }

    .dashboard-container {
      background: #FFFFFF;
      min-height: 100vh;
      border-radius: 20px 0 0 0;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
    }

    .form-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 0;
    }

    .form-card {
      background: #FFFFFF;
      border-radius: 16px;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.08);
      overflow: hidden;
      animation: slideIn 0.5s ease-out;
      border: 1px solid #F1F5F9;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-header {
      background: linear-gradient(135deg, #EC4899 0%, #F59E0B 100%);
      color: white;
      padding: 2rem;
      text-align: center;
    }

    .form-icon {
      width: 70px;
      height: 70px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      border: 3px solid rgba(255, 255, 255, 0.3);
    }

    .form-icon i {
      font-size: 2rem;
    }

    .form-header h2 {
      font-size: 1.75rem;
      font-weight: 700;
      margin: 0;
    }

    .form-body {
      padding: 2.5rem;
    }

    .alert {
      border-radius: 12px;
      border: none;
      padding: 1rem 1.25rem;
      margin-bottom: 1.5rem;
    }

    .alert-success {
      background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
      color: #065F46;
      border-left: 4px solid #10B981;
    }

    .alert-danger {
      background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
      color: #991B1B;
      border-left: 4px solid #EF4444;
    }

    .form-section {
      margin-bottom: 2rem;
    }

    .section-title {
      color: #1E293B;
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: 1.25rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #F1F5F9;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .section-title i {
      color: #EC4899;
    }

    .form-label {
      color: #475569;
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-label i {
      color: #94A3B8;
    }

    .form-label .required {
      color: #EF4444;
    }

    .form-control, .form-select {
      border: 2px solid #E2E8F0;
      border-radius: 10px;
      padding: 0.75rem 1rem;
      transition: all 0.3s ease;
      font-size: 0.95rem;
    }

    .form-control:focus, .form-select:focus {
      border-color: #EC4899;
      box-shadow: 0 0 0 0.2rem rgba(236, 72, 153, 0.1);
      background: #FFF7FB;
    }

    .form-control:hover:not(:focus), .form-select:hover:not(:focus) {
      border-color: #CBD5E1;
    }

    .input-group-icon {
      position: relative;
    }

    .input-group-icon i {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #94A3B8;
      pointer-events: none;
    }

    .input-group-icon .form-control {
      padding-left: 2.75rem;
    }

    .password-hint {
      color: #64748B;
      font-size: 0.85rem;
      font-style: italic;
      margin-top: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .password-hint i {
      color: #F59E0B;
    }

    .btn-save {
      background: linear-gradient(135deg, #EC4899 0%, #F59E0B 100%);
      border: none;
      border-radius: 10px;
      padding: 0.75rem 2rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-save:hover {
      background: linear-gradient(135deg, #DB2777 0%, #D97706 100%);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(236, 72, 153, 0.3);
      color: white;
    }

    .btn-cancel {
      background: transparent;
      border: 2px solid #E2E8F0;
      color: #64748B;
      border-radius: 10px;
      padding: 0.75rem 2rem;
      font-weight: 600;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
    }

    .btn-cancel:hover {
      background: #F8FAFC;
      border-color: #CBD5E1;
      color: #475569;
      transform: translateY(-2px);
      text-decoration: none;
    }

    .action-buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 2px solid #F1F5F9;
    }

    @media (max-width: 768px) {
      .form-body {
        padding: 1.5rem;
      }

      .action-buttons {
        flex-direction: column-reverse;
        gap: 0.75rem;
      }

      .action-buttons .btn-save,
      .action-buttons .btn-cancel {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <!-- Unified Banner -->
  <%- include('../partials/banner', { user: currentUser }) %>

  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-100">
      <div class="col dashboard-container">
        <div class="container mt-4">
          <div class="form-container">
            <div class="form-card">
              <div class="form-header">
                <div class="form-icon">
                  <i class="bi bi-<%= editUser ? 'person-gear' : 'person-plus' %>"></i>
                </div>
                <h2><%= editUser ? 'Edit User' : 'Add New User' %></h2>
              </div>

              <div class="form-body">
                <% if (typeof error !== 'undefined' && error) { %>
                  <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle-fill"></i> <%= error %>
                  </div>
                <% } %>
                <% if (typeof success !== 'undefined' && success) { %>
                  <div class="alert alert-success">
                    <i class="bi bi-check-circle-fill"></i> <%= success %>
                  </div>
                <% } %>

                <form action="<%= editUser ? `/admin/users/${editUser._id}?_method=PUT` : '/admin/users' %>" method="POST">
                  <div class="form-section">
                    <div class="section-title">
                      <i class="bi bi-person-badge"></i>
                      User Information
                    </div>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-person"></i>
                        Full Name <span class="required">*</span>
                      </label>
                      <div class="input-group-icon">
                        <i class="bi bi-person-fill"></i>
                        <input type="text" name="name" class="form-control" value="<%= editUser ? editUser.name : '' %>" required placeholder="Enter full name">
                      </div>
                    </div>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-envelope"></i>
                        Email Address <span class="required">*</span>
                      </label>
                      <div class="input-group-icon">
                        <i class="bi bi-envelope-fill"></i>
                        <input type="email" name="email" class="form-control" value="<%= editUser ? editUser.email : '' %>" required placeholder="user@example.com">
                      </div>
                    </div>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-telephone"></i>
                        Phone Number
                      </label>
                      <div class="input-group-icon">
                        <i class="bi bi-telephone-fill"></i>
                        <input type="tel" name="phone" class="form-control" value="<%= editUser ? editUser.phone : '' %>" placeholder="+1 (555) 123-4567">
                      </div>
                    </div>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-shield-check"></i>
                        User Role <span class="required">*</span>
                      </label>
                      <select name="role" class="form-select" required>
                        <option value="">Select Role</option>
                        <option value="user" <%= editUser && editUser.role === 'user' ? 'selected' : '' %>>User</option>
                        <option value="admin" <%= editUser && editUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-section">
                    <div class="section-title">
                      <i class="bi bi-shield-lock"></i>
                      <%= editUser ? 'Change Password' : 'Password' %>
                    </div>
                    <% if (editUser) { %>
                      <p class="password-hint">
                        <i class="bi bi-info-circle"></i>
                        Leave password fields blank to keep the current password
                      </p>
                    <% } %>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-key"></i>
                        Password <% if (!editUser) { %><span class="required">*</span><% } %>
                      </label>
                      <div class="input-group-icon">
                        <i class="bi bi-lock-fill"></i>
                        <input type="password" name="password" class="form-control" <%= editUser ? '' : 'required' %> placeholder="<%= editUser ? 'Enter new password (optional)' : 'Enter password' %>">
                      </div>
                      <% if (!editUser) { %>
                        <p class="password-hint">
                          <i class="bi bi-info-circle"></i>
                          Password must be at least 6 characters
                        </p>
                      <% } %>
                    </div>

                    <div class="mb-3">
                      <label class="form-label">
                        <i class="bi bi-key"></i>
                        Confirm Password <% if (!editUser) { %><span class="required">*</span><% } %>
                      </label>
                      <div class="input-group-icon">
                        <i class="bi bi-lock-fill"></i>
                        <input type="password" name="confirmPassword" class="form-control" <%= editUser ? '' : 'required' %> placeholder="<%= editUser ? 'Re-enter new password' : 'Re-enter password' %>">
                      </div>
                    </div>
                  </div>

                  <div class="action-buttons">
                    <a href="/admin/users" class="btn-cancel">
                      <i class="bi bi-arrow-left"></i>
                      Cancel
                    </a>
                    <button type="submit" class="btn-save">
                      <i class="bi bi-<%= editUser ? 'check-circle' : 'person-plus' %>"></i>
                      <%= editUser ? 'Update User' : 'Create User' %>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Password validation
    const form = document.querySelector('form');
    const password = document.querySelector('input[name="password"]');
    const confirmPassword = document.querySelector('input[name="confirmPassword"]');

    form.addEventListener('submit', (e) => {
      if (password.value && password.value !== confirmPassword.value) {
        e.preventDefault();
        alert('Passwords do not match!');
        confirmPassword.focus();
      }
      
      <% if (!editUser) { %>
      if (password.value && password.value.length < 6) {
        e.preventDefault();
        alert('Password must be at least 6 characters!');
        password.focus();
      }
      <% } %>
    });

    // Auto-dismiss alerts after 5 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        alert.style.transition = 'opacity 0.3s ease-out';
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 300);
      });
    }, 5000);
  </script>
</body>
</html>
