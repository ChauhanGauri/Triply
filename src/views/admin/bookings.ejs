<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Manage Bookings - Triply" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1E293B;
    }

    .dashboard-container {
      background: #FFFFFF;
      min-height: 100vh;
      border-radius: 20px 0 0 20px;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.8s ease-out;
    }

    .dashboard-header {
      background: #1E293B;
      color: white;
      padding: 2rem 0;
      border-radius: 20px 0 0 0;
    }

    .dashboard-title {
      background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .btn-custom {
      background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-custom:hover {
      background: linear-gradient(135deg, #D97706 0%, #B45309 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
      color: white;
      text-decoration: none;
    }

    .btn-outline-custom {
      background: transparent;
      border: 2px solid #F59E0B;
      color: #F59E0B;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-outline-custom:hover {
      background: #F59E0B;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
      text-decoration: none;
    }

    .section-card {
      background: #FFFFFF;
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.08);
      border: 1px solid #F1F5F9;
    }

    .section-title {
      color: #1E293B;
      font-weight: 600;
      margin-bottom: 1.5rem;
      font-size: 1.25rem;
    }

    .table {
      background: #FFFFFF;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 12px rgba(30, 41, 59, 0.08);
    }

    .table thead th {
      background: #F8FAFC;
      border-bottom: 2px solid #E2E8F0;
      color: #1E293B;
      font-weight: 600;
      padding: 1rem;
    }

    .table tbody td {
      padding: 1rem;
      border-bottom: 1px solid #F1F5F9;
      color: #475569;
    }

    .table-hover tbody tr:hover {
      background-color: #FEF3C7;
    }

    .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .status-confirmed {
      background: #D1FAE5;
      color: #065F46;
    }

    .status-pending {
      background: #FED7AA;
      color: #9A3412;
    }

    .status-cancelled {
      background: #FECACA;
      color: #B91C1C;
    }

    @keyframes slideIn {
      0% {
        opacity: 0;
        transform: translateX(30px);
      }
      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @media (max-width: 768px) {
      .dashboard-container {
        border-radius: 0;
        margin: 0;
      }

      .dashboard-header {
        border-radius: 0;
        text-align: center;
      }
    }
  </style>
</head>
<body>

  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-100">
      <!-- Main Content -->
      <div class="col dashboard-container">

        <!-- Header -->
        <div class="dashboard-header">
          <div class="container">
            <div class="row align-items-center">
              <div class="col">
                <a href="/admin/dashboard" class="text-decoration-none">
                  <h1 class="dashboard-title mb-1">
                    <i class="bi bi-bus-front me-3"></i>
                    Triply
                  </h1>
                </a>
                <p class="mb-0 opacity-75">Admin Dashboard</p>
              </div>
              <div class="col-auto">
                <div class="d-flex gap-2 flex-wrap">
                  <a href="/admin/bookings" class="btn-custom">
                    <i class="bi bi-ticket-detailed"></i>
                    Bookings
                  </a>
                  <a href="/admin/routes" class="btn-custom">
                    <i class="bi bi-map"></i>
                    Routes
                  </a>
                  <a href="/admin/schedules" class="btn-custom">
                    <i class="bi bi-calendar-event"></i>
                    Schedules
                  </a>
                  <a href="/admin/users" class="btn-custom">
                    <i class="bi bi-people"></i>
                    Users
                  </a>
                  <a href="/auth/logout" class="btn-outline-custom">
                    <i class="bi bi-box-arrow-right"></i>
                    Logout
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container py-4">
          <div class="section-card">
            <h2 class="section-title"><i class="bi bi-journal-bookmark me-2"></i> Manage Bookings</h2>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                    <tr>
                    <th>User</th>
                    <th>Route</th>
                    <th>Schedule ID</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (bookings && bookings.length > 0) { %>
                    <% bookings.forEach(booking => { %>
                      <tr>
                        <td><%= booking.user ? booking.user.name : 'N/A' %> (<%= booking.user ? booking.user.email : '' %>)</td>
                        <td>
                          <%= booking.schedule && booking.schedule.route ? booking.schedule.route.routeNumber : 'N/A' %><br>
                          <small class="text-muted">
                            <%= booking.schedule && booking.schedule.route ? booking.schedule.route.origin : '' %> â†’ <%= booking.schedule && booking.schedule.route ? booking.schedule.route.destination : '' %>
                          </small>
                        </td>
                        <td>
                          <code><%= booking.schedule && booking.schedule.scheduleId ? booking.schedule.scheduleId : (booking.schedule && booking.schedule._id ? booking.schedule._id.toString().slice(-8) : 'N/A') %></code>
                        </td>
                        <td>
                          <% if (booking.status === 'confirmed') { %>
                            <span class="status-badge status-confirmed"><%= booking.status %></span>
                          <% } else if (booking.status === 'cancelled') { %>
                            <span class="status-badge status-cancelled"><%= booking.status %></span>
                          <% } else { %>
                            <span class="status-badge status-pending"><%= booking.status %></span>
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="viewBookingDetails('<%= booking._id %>')">
                              <i class="bi bi-eye"></i> View Details
                            </button>
                            <button type="button" class="btn btn-outline-info" onclick="viewCustomerProfile('<%= booking.user ? booking.user._id : '' %>')">
                              <i class="bi bi-person"></i> Customer
                            </button>
                            <% if (booking.status === 'confirmed') { %>
                              <button type="button" class="btn btn-outline-danger" onclick="cancelBooking('<%= booking._id %>')">
                                <i class="bi bi-x-circle"></i> Cancel
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center py-4">
                        <div class="text-muted">
                          <i class="bi bi-journal-bookmark fs-1"></i>
                          <p class="mt-2">No bookings found.</p>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Booking Details Modal -->
  <div class="modal fade" id="bookingDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-journal-bookmark"></i> Booking Details
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="bookingDetailsContent">
          <div class="text-center">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Profile Modal -->
  <div class="modal fade" id="customerProfileModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-person"></i> Customer Profile
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="customerProfileContent">
          <div class="text-center">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function viewBookingDetails(bookingId) {
      const modal = new bootstrap.Modal(document.getElementById('bookingDetailsModal'));
      const contentDiv = document.getElementById('bookingDetailsContent');
      
      // Show loading spinner
      contentDiv.innerHTML = `
        <div class="text-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      `;
      
      modal.show();
      
      // Fetch booking details
      fetch(`/api/bookings/${bookingId}`)
        .then(response => response.json())
        .then(data => {
          if (data.data) {
            const booking = data.data;
            contentDiv.innerHTML = generateBookingDetailsHTML(booking);
          } else {
            contentDiv.innerHTML = '<div class="alert alert-danger">Failed to load booking details.</div>';
          }
        })
        .catch(error => {
          console.error('Error fetching booking details:', error);
          contentDiv.innerHTML = '<div class="alert alert-danger">Error loading booking details.</div>';
        });
    }

    function viewCustomerProfile(userId) {
      if (!userId) {
        alert('User ID not available');
        return;
      }
      
      const modal = new bootstrap.Modal(document.getElementById('customerProfileModal'));
      const contentDiv = document.getElementById('customerProfileContent');
      
      // Show loading spinner
      contentDiv.innerHTML = `
        <div class="text-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      `;
      
      modal.show();
      
      // Fetch customer profile
      fetch(`/api/users/${userId}`)
        .then(response => response.json())
        .then(data => {
          if (data.data) {
            const user = data.data;
            contentDiv.innerHTML = generateCustomerProfileHTML(user);
          } else {
            contentDiv.innerHTML = '<div class="alert alert-danger">Failed to load customer profile.</div>';
          }
        })
        .catch(error => {
          console.error('Error fetching customer profile:', error);
          contentDiv.innerHTML = '<div class="alert alert-danger">Error loading customer profile.</div>';
        });
    }

    function cancelBooking(bookingId) {
      if (confirm('Are you sure you want to cancel this booking?')) {
        fetch(`/api/bookings/${bookingId}/cancel`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert('Booking cancelled successfully');
            location.reload();
          } else {
            alert('Failed to cancel booking');
          }
        })
        .catch(error => {
          console.error('Error cancelling booking:', error);
          alert('Error cancelling booking');
        });
      }
    }

    function generateBookingDetailsHTML(booking) {
      return `
        <div class="row">
          <div class="col-md-6">
            <h6><i class="bi bi-info-circle"></i> Booking Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Booking ID:</strong></td>
                <td>${booking._id}</td>
              </tr>
              <tr>
                <td><strong>Status:</strong></td>
                <td>
                  <span class="badge bg-${booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'secondary'}">
                    ${booking.status}
                  </span>
                </td>
              </tr>
              <tr>
                <td><strong>Seats:</strong></td>
                <td>${booking.seats || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Booked At:</strong></td>
                <td>${new Date(booking.createdAt).toLocaleString()}</td>
              </tr>
              <tr>
                <td><strong>Updated At:</strong></td>
                <td>${new Date(booking.updatedAt).toLocaleString()}</td>
              </tr>
            </table>
          </div>
          <div class="col-md-6">
            <h6><i class="bi bi-person"></i> Customer Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Name:</strong></td>
                <td>${booking.user ? booking.user.name : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Email:</strong></td>
                <td>${booking.user ? booking.user.email : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Customer ID:</strong></td>
                <td>${booking.user ? booking.user._id : 'N/A'}</td>
              </tr>
            </table>
          </div>
        </div>
        
        ${booking.schedule ? `
        <div class="row mt-3">
          <div class="col-12">
            <h6><i class="bi bi-geo-alt"></i> Schedule & Route Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Route Number:</strong></td>
                <td>${booking.schedule.route ? booking.schedule.route.routeNumber : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Route:</strong></td>
                <td>${booking.schedule.route ? booking.schedule.route.origin + ' â†’ ' + booking.schedule.route.destination : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Departure:</strong></td>
                <td>${booking.schedule.departureTime || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Arrival:</strong></td>
                <td>${booking.schedule.arrivalTime || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Journey Date:</strong></td>
                <td>${booking.schedule.journeyDate ? new Date(booking.schedule.journeyDate).toLocaleDateString() : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Bus Number:</strong></td>
                <td>${booking.schedule.busNumber || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Driver:</strong></td>
                <td>${booking.schedule.driverName || booking.schedule.driver || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Fare:</strong></td>
                <td>â‚¹${booking.schedule.route ? booking.schedule.route.fare : 'N/A'}</td>
              </tr>
            </table>
          </div>
        </div>
        ` : ''}
      `;
    }

    function generateCustomerProfileHTML(user) {
      return `
        <div class="row">
          <div class="col-12">
            <table class="table table-sm">
              <tr>
                <td><strong>User ID:</strong></td>
                <td>${user._id}</td>
              </tr>
              <tr>
                <td><strong>Name:</strong></td>
                <td>${user.name}</td>
              </tr>
              <tr>
                <td><strong>Email:</strong></td>
                <td>${user.email}</td>
              </tr>
              <tr>
                <td><strong>Joined:</strong></td>
                <td>${new Date(user.createdAt).toLocaleDateString()}</td>
              </tr>
              <tr>
                <td><strong>Last Updated:</strong></td>
                <td>${new Date(user.updatedAt).toLocaleDateString()}</td>
              </tr>
            </table>
            <div class="mt-3">
              <a href="/api/bookings/user/${user._id}" class="btn btn-sm btn-outline-primary" target="_blank">
                <i class="bi bi-download"></i> View All Customer Bookings
              </a>
            </div>
          </div>
        </div>
      `;
    }
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    try {
      const socket = io({
        withCredentials: true,
        reconnection: true,
        reconnectionDelay: 1000,
        reconnectionAttempts: 5
      });

      // Handle authentication events
      socket.on('authenticated', (data) => {
        console.log('âœ… Socket authenticated:', data.user.name, `(${data.user.role})`);
      });

      socket.on('unauthorized', (data) => {
        console.error('ðŸ”´ Socket unauthorized:', data.message);
        alert('Session expired. Please log in again.');
        window.location.href = '/auth/admin/login';
      });

      socket.on('connect', () => {
        console.log('ðŸŸ¢ Socket connected');
      });

      socket.on('disconnect', (reason) => {
        console.log('ðŸ”´ Socket disconnected:', reason);
      });

      socket.on('connect_error', (error) => {
        console.error('Socket connection error:', error);
      });

      socket.on('bookingCreated', (payload) => {
        try {
          const booking = payload.booking;
          const tbody = document.querySelector('.table.table-hover tbody');
          if (!tbody) return;

          const tr = document.createElement('tr');

          const userCell = `<td>${escapeHtml(booking.user ? booking.user.name : 'N/A')} (${escapeHtml(booking.user ? booking.user.email : '')})</td>`;

          let routeHtml = '<td>N/A</td>';
          if (booking.schedule && booking.schedule.route) {
            routeHtml = `<td>${escapeHtml(booking.schedule.route.routeNumber || '')}<br><small class="text-muted">${escapeHtml(booking.schedule.route.origin || '')} â†’ ${escapeHtml(booking.schedule.route.destination || '')}</small></td>`;
          }

          const scheduleIdCell = `<td><code>${escapeHtml((booking.schedule && booking.schedule.scheduleId) ? booking.schedule.scheduleId : (booking.schedule && booking.schedule._id ? booking.schedule._id.toString().slice(-8) : 'N/A'))}</code></td>`;

          let statusBadge = `<span class="status-badge status-pending">${escapeHtml(booking.status || 'pending')}</span>`;
          if (booking.status === 'confirmed') statusBadge = '<span class="status-badge status-confirmed">Confirmed</span>';
          if (booking.status === 'cancelled') statusBadge = '<span class="status-badge status-cancelled">Cancelled</span>';

          const statusCell = `<td>${statusBadge}</td>`;

          const actionsCell = `<td><div class="btn-group btn-group-sm" role="group"><button type="button" class="btn btn-outline-primary" onclick="viewBookingDetails('${booking._id}')"><i class="bi bi-eye"></i> View Details</button><button type="button" class="btn btn-outline-info" onclick="viewCustomerProfile('${booking.user ? booking.user._id : ''}')"><i class="bi bi-person"></i> Customer</button>${booking.status === 'confirmed' ? `<button type="button" class="btn btn-outline-danger" onclick="cancelBooking('${booking._id}')"><i class="bi bi-x-circle"></i> Cancel</button>` : ''}</div></td>`;

          tr.innerHTML = userCell + routeHtml + scheduleIdCell + statusCell + actionsCell;

          if (tbody.firstChild) tbody.insertBefore(tr, tbody.firstChild);
          else tbody.appendChild(tr);
          
          // Show toast notification
          showToast('New booking received!', 'success');
        } catch (err) {
          console.error('Error handling bookingCreated on bookings page:', err);
        }
      });

      function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type === 'success' ? 'success' : 'info'} position-fixed top-0 end-0 m-3`;
        toast.style.zIndex = '9999';
        toast.innerHTML = `<strong>${message}</strong>`;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
      }

      function escapeHtml(str) {
        if (!str && str !== 0) return '';
        return String(str).replace(/[&<>"'`]/g, function (s) {
          return ({
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#39;',
            '`': '&#x60;'
          })[s];
        });
      }
    } catch (socketErr) {
      console.warn('Socket.io client failed to initialize on bookings page:', socketErr.message);
    }
  </script>
</body>
</html>