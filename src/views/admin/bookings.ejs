<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Manage Bookings" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/admin/dashboard">
        <i class="bi bi-bus-front"></i> Transport Admin
      </a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
        <a class="nav-link" href="/admin/routes">Routes</a>
        <a class="nav-link" href="/admin/schedules">Schedules</a>
        <a class="nav-link" href="/admin/users">Users</a>
        <a class="nav-link active" href="/admin/bookings">Bookings</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <h2><i class="bi bi-journal-bookmark"></i> Manage Bookings</h2>
        <div class="card mt-3">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>User</th>
                    <th>Route</th>
                    <th>Schedule</th>
                    <th>Status</th>
                    <th>Booked At</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (bookings && bookings.length > 0) { %>
                    <% bookings.forEach(booking => { %>
                      <tr>
                        <td><%= booking.user ? booking.user.name : 'N/A' %> (<%= booking.user ? booking.user.email : '' %>)</td>
                        <td>
                          <%= booking.schedule && booking.schedule.route ? booking.schedule.route.routeNumber : 'N/A' %><br>
                          <small class="text-muted">
                            <%= booking.schedule && booking.schedule.route ? booking.schedule.route.origin : '' %> → <%= booking.schedule && booking.schedule.route ? booking.schedule.route.destination : '' %>
                          </small>
                        </td>
                        <td>
                          <%= booking.schedule ? new Date(booking.schedule.departureTime).toLocaleString() : 'N/A' %>
                        </td>
                        <td>
                          <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'secondary' %>">
                            <%= booking.status %>
                          </span>
                        </td>
                        <td><%= new Date(booking.createdAt).toLocaleString() %></td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="viewBookingDetails('<%= booking._id %>')">
                              <i class="bi bi-eye"></i> View Details
                            </button>
                            <button type="button" class="btn btn-outline-info" onclick="viewCustomerProfile('<%= booking.user ? booking.user._id : '' %>')">
                              <i class="bi bi-person"></i> Customer
                            </button>
                            <% if (booking.status === 'confirmed') { %>
                              <button type="button" class="btn btn-outline-danger" onclick="cancelBooking('<%= booking._id %>')">
                                <i class="bi bi-x-circle"></i> Cancel
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center py-4">
                        <div class="text-muted">
                          <i class="bi bi-journal-bookmark fs-1"></i>
                          <p class="mt-2">No bookings found.</p>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Booking Details Modal -->
  <div class="modal fade" id="bookingDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-journal-bookmark"></i> Booking Details
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="bookingDetailsContent">
          <div class="text-center">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Profile Modal -->
  <div class="modal fade" id="customerProfileModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-person"></i> Customer Profile
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="customerProfileContent">
          <div class="text-center">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function viewBookingDetails(bookingId) {
      const modal = new bootstrap.Modal(document.getElementById('bookingDetailsModal'));
      const contentDiv = document.getElementById('bookingDetailsContent');
      
      // Show loading spinner
      contentDiv.innerHTML = `
        <div class="text-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      `;
      
      modal.show();
      
      // Fetch booking details
      fetch(`/api/bookings/${bookingId}`)
        .then(response => response.json())
        .then(data => {
          if (data.data) {
            const booking = data.data;
            contentDiv.innerHTML = generateBookingDetailsHTML(booking);
          } else {
            contentDiv.innerHTML = '<div class="alert alert-danger">Failed to load booking details.</div>';
          }
        })
        .catch(error => {
          console.error('Error fetching booking details:', error);
          contentDiv.innerHTML = '<div class="alert alert-danger">Error loading booking details.</div>';
        });
    }

    function viewCustomerProfile(userId) {
      if (!userId) {
        alert('User ID not available');
        return;
      }
      
      const modal = new bootstrap.Modal(document.getElementById('customerProfileModal'));
      const contentDiv = document.getElementById('customerProfileContent');
      
      // Show loading spinner
      contentDiv.innerHTML = `
        <div class="text-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      `;
      
      modal.show();
      
      // Fetch customer profile
      fetch(`/api/users/${userId}`)
        .then(response => response.json())
        .then(data => {
          if (data.data) {
            const user = data.data;
            contentDiv.innerHTML = generateCustomerProfileHTML(user);
          } else {
            contentDiv.innerHTML = '<div class="alert alert-danger">Failed to load customer profile.</div>';
          }
        })
        .catch(error => {
          console.error('Error fetching customer profile:', error);
          contentDiv.innerHTML = '<div class="alert alert-danger">Error loading customer profile.</div>';
        });
    }

    function cancelBooking(bookingId) {
      if (confirm('Are you sure you want to cancel this booking?')) {
        fetch(`/api/bookings/${bookingId}/cancel`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert('Booking cancelled successfully');
            location.reload();
          } else {
            alert('Failed to cancel booking');
          }
        })
        .catch(error => {
          console.error('Error cancelling booking:', error);
          alert('Error cancelling booking');
        });
      }
    }

    function generateBookingDetailsHTML(booking) {
      return `
        <div class="row">
          <div class="col-md-6">
            <h6><i class="bi bi-info-circle"></i> Booking Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Booking ID:</strong></td>
                <td>${booking._id}</td>
              </tr>
              <tr>
                <td><strong>Status:</strong></td>
                <td>
                  <span class="badge bg-${booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'secondary'}">
                    ${booking.status}
                  </span>
                </td>
              </tr>
              <tr>
                <td><strong>Seats:</strong></td>
                <td>${booking.seats || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Booked At:</strong></td>
                <td>${new Date(booking.createdAt).toLocaleString()}</td>
              </tr>
              <tr>
                <td><strong>Updated At:</strong></td>
                <td>${new Date(booking.updatedAt).toLocaleString()}</td>
              </tr>
            </table>
          </div>
          <div class="col-md-6">
            <h6><i class="bi bi-person"></i> Customer Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Name:</strong></td>
                <td>${booking.user ? booking.user.name : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Email:</strong></td>
                <td>${booking.user ? booking.user.email : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Customer ID:</strong></td>
                <td>${booking.user ? booking.user._id : 'N/A'}</td>
              </tr>
            </table>
          </div>
        </div>
        
        ${booking.schedule ? `
        <div class="row mt-3">
          <div class="col-12">
            <h6><i class="bi bi-geo-alt"></i> Schedule & Route Information</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>Route Number:</strong></td>
                <td>${booking.schedule.route ? booking.schedule.route.routeNumber : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Route:</strong></td>
                <td>${booking.schedule.route ? booking.schedule.route.origin + ' → ' + booking.schedule.route.destination : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Departure:</strong></td>
                <td>${booking.schedule.departureTime || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Arrival:</strong></td>
                <td>${booking.schedule.arrivalTime || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Journey Date:</strong></td>
                <td>${booking.schedule.journeyDate ? new Date(booking.schedule.journeyDate).toLocaleDateString() : 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Bus Number:</strong></td>
                <td>${booking.schedule.busNumber || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Driver:</strong></td>
                <td>${booking.schedule.driver || 'N/A'}</td>
              </tr>
              <tr>
                <td><strong>Fare:</strong></td>
                <td>₹${booking.schedule.route ? booking.schedule.route.fare : 'N/A'}</td>
              </tr>
            </table>
          </div>
        </div>
        ` : ''}
      `;
    }

    function generateCustomerProfileHTML(user) {
      return `
        <div class="row">
          <div class="col-12">
            <table class="table table-sm">
              <tr>
                <td><strong>User ID:</strong></td>
                <td>${user._id}</td>
              </tr>
              <tr>
                <td><strong>Name:</strong></td>
                <td>${user.name}</td>
              </tr>
              <tr>
                <td><strong>Email:</strong></td>
                <td>${user.email}</td>
              </tr>
              <tr>
                <td><strong>Role:</strong></td>
                <td><span class="badge bg-info">${user.role}</span></td>
              </tr>
              <tr>
                <td><strong>Joined:</strong></td>
                <td>${new Date(user.createdAt).toLocaleDateString()}</td>
              </tr>
              <tr>
                <td><strong>Last Updated:</strong></td>
                <td>${new Date(user.updatedAt).toLocaleDateString()}</td>
              </tr>
            </table>
            <div class="mt-3">
              <a href="/api/bookings/user/${user._id}" class="btn btn-sm btn-outline-primary" target="_blank">
                <i class="bi bi-download"></i> View All Customer Bookings
              </a>
            </div>
          </div>
        </div>
      `;
    }
  </script>
</body>
</html>