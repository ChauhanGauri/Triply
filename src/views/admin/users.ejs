<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Manage Users" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/admin/dashboard">
        <i class="bi bi-bus-front"></i> Transport Admin
      </a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
        <a class="nav-link" href="/admin/routes">Routes</a>
        <a class="nav-link" href="/admin/schedules">Schedules</a>
        <a class="nav-link active" href="/admin/users">Users</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-people"></i> Manage Users</h2>
          <a href="/admin/users/new" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New User
          </a>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (users && users.length > 0) { %>
                    <% users.forEach(userItem => { %>
                      <tr>
                        <td><%= userItem.name %></td>
                        <td><%= userItem.email %></td>
                        <td><%= userItem.phone %></td>
                        <td>
                          <span class="badge bg-<%= userItem.role === 'admin' ? 'danger' : 'primary' %>">
                            <%= userItem.role.charAt(0).toUpperCase() + userItem.role.slice(1) %>
                          </span>
                        </td>
                        <td>
                          <span class="badge bg-<%= userItem.isActive ? 'success' : 'secondary' %>">
                            <%= userItem.isActive ? 'Active' : 'Inactive' %>
                          </span>
                        </td>
                        <td><%= new Date(userItem.createdAt).toLocaleDateString() %></td>
                        <td>
                          <div class="btn-group" role="group">
                            <a href="/admin/users/<%= userItem._id %>/edit" class="btn btn-sm btn-outline-primary">
                              <i class="bi bi-pencil"></i>
                            </a>
                            <% if (userItem._id !== user.id) { %>
                              <button class="btn btn-sm btn-outline-danger" onclick="deleteUser('<%= userItem._id %>')">
                                <i class="bi bi-trash"></i>
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center py-4">
                        <div class="text-muted">
                          <i class="bi bi-people fs-1"></i>
                          <p class="mt-2">No users found. <a href="/admin/users/new">Add your first user</a>.</p>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function deleteUser(userId) {
      if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
        fetch(`/admin/users/${userId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert(data.message);
            location.reload();
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error deleting user');
        });
      }
    }
  </script>
</body>
</html>