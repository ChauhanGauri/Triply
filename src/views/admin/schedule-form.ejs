<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Schedule Form" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/admin/dashboard">
        <i class="bi bi-bus-front"></i> Transport Admin
      </a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
        <a class="nav-link" href="/admin/routes">Routes</a>
        <a class="nav-link active" href="/admin/schedules">Schedules</a>
        <a class="nav-link" href="/admin/users">Users</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h4 class="mb-0">
              <i class="bi bi-calendar-event"></i> 
              <%= schedule ? 'Edit Schedule' : 'Add New Schedule' %>
            </h4>
          </div>
          <div class="card-body">
            <form action="<%= schedule ? `/admin/schedules/${schedule._id}?_method=PUT` : '/admin/schedules' %>" method="POST">
              <div class="mb-3">
                <label for="route" class="form-label">Route *</label>
                <select class="form-select" id="route" name="route" required>
                  <option value="">Select a route</option>
                  <% routes.forEach(route => { %>
                    <option value="<%= route._id %>" <%= schedule && schedule.route && schedule.route._id === route._id ? 'selected' : '' %>>
                      <%= route.routeNumber %> - <%= route.origin %> â†’ <%= route.destination %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="journeyDate" class="form-label">Journey Date *</label>
                <input type="date" class="form-control" id="journeyDate" name="journeyDate"
                       value="<%= schedule && schedule.journeyDate ? new Date(schedule.journeyDate).toISOString().split('T')[0] : '' %>" required>
                <small class="form-text text-muted">Select the date for this scheduled journey</small>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="departureTime" class="form-label">Departure Time *</label>
                  <input type="time" class="form-control" id="departureTime" name="departureTime"
                         value="<%= schedule ? schedule.departureTime || '' : '' %>" required>
                  <small class="form-text text-muted">Format: HH:MM (e.g., 14:30 for 2:30 PM)</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="arrivalTime" class="form-label">Arrival Time *</label>
                  <input type="time" class="form-control" id="arrivalTime" name="arrivalTime"
                         value="<%= schedule ? schedule.arrivalTime || '' : '' %>" required>
                  <small class="form-text text-muted">Format: HH:MM (e.g., 16:45 for 4:45 PM)</small>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="busNumber" class="form-label">Bus Number *</label>
                  <input type="text" class="form-control" id="busNumber" name="busNumber" 
                         value="<%= schedule ? schedule.busNumber || '' : '' %>" 
                         placeholder="e.g., PB-01-1234" required>
                  <small class="form-text text-muted">Enter the bus registration number</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="driverName" class="form-label">Driver Name</label>
                  <input type="text" class="form-control" id="driverName" name="driverName" 
                         value="<%= schedule ? schedule.driverName || '' : '' %>" 
                         placeholder="Enter driver's full name">
                  <small class="form-text text-muted">Optional: Name of the assigned driver</small>
                </div>
              </div>

              <div class="d-flex justify-content-between">
                <a href="/admin/schedules" class="btn btn-secondary">
                  <i class="bi bi-arrow-left"></i> Back to Schedules
                </a>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-circle"></i> 
                  <%= schedule ? 'Update Schedule' : 'Create Schedule' %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Validate that arrival time is after departure time
    function validateTimes() {
      const departureTime = document.getElementById('departureTime').value;
      const arrivalTime = document.getElementById('arrivalTime').value;
      
      if (departureTime && arrivalTime && arrivalTime <= departureTime) {
        alert('Arrival time must be after departure time');
        return false;
      }
      return true;
    }
    
    document.getElementById('arrivalTime').addEventListener('change', validateTimes);
    document.getElementById('departureTime').addEventListener('change', validateTimes);
  </script>
</body>
</html>