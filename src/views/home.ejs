<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Public Transport Management System" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      background: #1E293B;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      overflow-x: hidden;
      position: relative;
    }

    /* Travel-themed background elements - removed for solid background */

    /* Abstract map lines - removed for solid background */

    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      text-align: center;
      position: relative;
      z-index: 1;
    }

    .hero-content {
      background: #FFFFFF;
      border-radius: 24px;
      padding: 3rem;
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.15),
        0 10px 25px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(0, 0, 0, 0.1);
      max-width: 600px;
      animation: fadeInUp 1.2s ease-out;
      position: relative;
      overflow: hidden;
    }

    .hero-content::before {
      display: none;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-title {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 1rem;
      text-shadow: none;
      background: linear-gradient(135deg, #1E293B 0%, #3B82F6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      margin-bottom: 2rem;
      opacity: 0.8;
      font-weight: 300;
      letter-spacing: 0.5px;
      color: #1E293B;
    }

    .login-cards {
      display: flex;
      gap: 2rem;
      justify-content: center;
      margin-top: 2rem;
    }

    .login-card {
      background: rgba(255, 255, 255, 0.98);
      border-radius: 20px;
      padding: 2.5rem 2rem;
      color: #1E293B;
      text-decoration: none;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      flex: 1;
      max-width: 280px;
      box-shadow:
        0 15px 35px rgba(30, 41, 59, 0.1),
        0 5px 15px rgba(30, 41, 59, 0.05);
      border: 2px solid transparent;
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }

    .login-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(16, 185, 129, 0.03) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .login-card:hover {
      transform: scale(1.05) translateY(-8px);
      box-shadow:
        0 25px 50px rgba(30, 41, 59, 0.15),
        0 10px 25px rgba(30, 41, 59, 0.08),
        0 0 30px rgba(59, 130, 246, 0.1);
      text-decoration: none;
      color: #1E293B;
      border-color: rgba(59, 130, 246, 0.2);
    }

    .login-card:hover::before {
      opacity: 1;
    }

    .login-card:active {
      transform: scale(1.02) translateY(-4px);
    }

    .login-card.selected {
      border-color: rgba(16, 185, 129, 0.6);
      box-shadow:
        0 15px 35px rgba(30, 41, 59, 0.15),
        0 5px 15px rgba(30, 41, 59, 0.08),
        0 0 25px rgba(16, 185, 129, 0.3);
    }

    .login-card-icon {
      font-size: 3.5rem;
      margin-bottom: 1.5rem;
      display: block;
      transition: transform 0.3s ease;
    }

    .login-card:hover .login-card-icon {
      transform: scale(1.1);
    }

    .admin-card .login-card-icon {
      color: #10B981;
      filter: drop-shadow(0 2px 4px rgba(16, 185, 129, 0.3));
    }

    .user-card .login-card-icon {
      color: #3B82F6;
      filter: drop-shadow(0 2px 4px rgba(59, 130, 246, 0.3));
    }

    .login-card h3 {
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
      letter-spacing: 0.5px;
      color: #1E293B;
    }

    .login-card p {
      margin-bottom: 0;
      opacity: 0.6;
      font-weight: 400;
      font-size: 0.95rem;
      line-height: 1.4;
      color: #1E293B;
    }

    .features {
      background: rgba(30, 41, 59, 0.05);
      border-radius: 15px;
      padding: 2rem;
      margin-top: 2rem;
    }

    .feature-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .feature-list li {
      padding: 0.5rem 0;
      display: flex;
      align-items: center;
    }

    .feature-list li i {
      margin-right: 0.75rem;
      color: #10B981;
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.2rem;
      }

      .login-cards {
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
      }

      .login-card {
        max-width: 320px;
        padding: 2rem 1.5rem;
      }

      .hero-content {
        margin: 1rem;
        padding: 2rem 1.5rem;
      }

      .login-card:hover {
        transform: scale(1.03) translateY(-5px);
      }
    }

    @media (max-width: 480px) {
      .hero-content {
        margin: 0.5rem;
        padding: 1.5rem 1rem;
      }

      .hero-title {
        font-size: 1.8rem;
      }

      .login-card {
        padding: 1.5rem 1rem;
      }

      .login-card-icon {
        font-size: 3rem;
      }

      .login-card h3 {
        font-size: 1.4rem;
      }
    }
  </style>
</head>
<body>
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        <i class="bi bi-bus-front"></i><br>
        Triply
      </h1>
      <p class="hero-subtitle">
        Seamless Travel, Anytime, Anywhere
      </p>

      <div class="login-cards">
        <a href="/auth/admin/login" class="login-card admin-card" id="admin-card">
          <i class="bi bi-shield-check login-card-icon"></i>
          <h3>Admin Login</h3>
          <p>Manage routes, schedules, and users</p>
        </a>

        <a href="/auth/user/login" class="login-card user-card" id="user-card">
          <i class="bi bi-person-circle login-card-icon"></i>
          <h3>User Login</h3>
          <p>Book tickets and manage travels</p>
        </a>
      </div>


    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Add micro-interactions for card selection
    document.addEventListener('DOMContentLoaded', function() {
      const adminCard = document.getElementById('admin-card');
      const userCard = document.getElementById('user-card');

      // Add click animation and selection state
      [adminCard, userCard].forEach(card => {
        card.addEventListener('click', function(e) {
          // Remove selected class from all cards
          document.querySelectorAll('.login-card').forEach(c => c.classList.remove('selected'));

          // Add selected class to clicked card
          this.classList.add('selected');

          // Add a subtle pulse animation
          this.style.animation = 'none';
          setTimeout(() => {
            this.style.animation = 'pulse 0.6s ease-out';
          }, 10);
        });

        // Add focus states for accessibility
        card.addEventListener('focus', function() {
          this.classList.add('selected');
        });

        card.addEventListener('blur', function() {
          this.classList.remove('selected');
        });
      });

      // Add keyboard navigation support
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Tab') {
          const focusedElement = document.activeElement;
          if (focusedElement === adminCard || focusedElement === userCard) {
            document.querySelectorAll('.login-card').forEach(c => c.classList.remove('selected'));
            focusedElement.classList.add('selected');
          }
        }
      });
    });

    // Add CSS animation for pulse effect
    const style = document.createElement('style');
    style.textContent = `
      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.02); }
        100% { transform: scale(1); }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>