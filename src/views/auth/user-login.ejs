<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "User Login" %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      display: flex;
      background: #f5f5f7;
    }
    
    .login-wrapper {
      display: flex;
      width: 100%;
      min-height: 100vh;
    }

    /* Left Panel - Image */
    .left-panel {
      flex: 1;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .left-panel::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('https://images.unsplash.com/photo-1544620347-c4fd4a3d5957?w=800') center/cover;
      opacity: 0.3;
    }

    .left-content {
      position: relative;
      z-index: 2;
      text-align: center;
      color: white;
      padding: 3rem;
      max-width: 500px;
    }

    .left-content .logo {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    .left-content h1 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .left-content p {
      font-size: 1.1rem;
      opacity: 0.95;
      line-height: 1.6;
    }

    .carousel-indicators {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 8px;
    }

    .carousel-indicators button {
      width: 30px;
      height: 4px;
      background: rgba(255, 255, 255, 0.5);
      border: none;
      border-radius: 2px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .carousel-indicators button.active {
      background: white;
      width: 40px;
    }

    /* Right Panel - Form */
    .right-panel {
      flex: 1;
      background: #2d3748;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    
    .login-container {
      width: 100%;
      max-width: 450px;
      animation: fadeInRight 0.6s ease-out;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #a0aec0;
      text-decoration: none;
      font-size: 0.9rem;
      margin-bottom: 2rem;
      transition: color 0.3s;
    }

    .back-link:hover {
      color: #667eea;
    }

    .login-header {
      margin-bottom: 2rem;
    }
    
    .login-header h2 {
      color: white;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    .login-header p {
      color: #a0aec0;
      font-size: 1rem;
    }

    .login-header p a {
      color: #667eea;
      text-decoration: none;
      font-weight: 500;
    }

    .login-header p a:hover {
      text-decoration: underline;
    }
    
    .form-label {
      color: #cbd5e0;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      font-weight: 500;
      display: block;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #4a5568;
      padding: 12px 16px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: #1a202c;
      color: white;
      width: 100%;
    }
    
    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
      background: #1a202c;
      color: white;
      outline: none;
    }

    .form-control::placeholder {
      color: #718096;
    }
    
    .btn-login {
      background: #667eea;
      border: none;
      border-radius: 8px;
      padding: 14px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      width: 100%;
      color: white;
      margin-top: 0.5rem;
    }
    
    .btn-login:hover {
      background: #5a67d8;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
      color: white;
    }

    .checkbox-container {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin: 1rem 0;
    }

    .checkbox-container input[type="checkbox"] {
      width: 18px;
      height: 18px;
      cursor: pointer;
    }

    .checkbox-container label {
      color: #cbd5e0;
      font-size: 0.9rem;
      cursor: pointer;
      margin: 0;
    }

    .checkbox-container label a {
      color: #667eea;
      text-decoration: none;
    }

    .checkbox-container label a:hover {
      text-decoration: underline;
    }
    
    .alert {
      border-radius: 8px;
      border: none;
      font-size: 14px;
      margin-bottom: 1rem;
    }
    
    .input-group {
      margin-bottom: 1.25rem;
    }
    
    @keyframes fadeInRight {
      0% {
        opacity: 0;
        transform: translateX(30px);
      }
      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    .divider {
      text-align: center;
      margin: 1.5rem 0;
      color: #718096;
      font-size: 0.9rem;
      position: relative;
    }

    .divider::before,
    .divider::after {
      content: '';
      position: absolute;
      top: 50%;
      width: 40%;
      height: 1px;
      background: #4a5568;
    }

    .divider::before {
      left: 0;
    }

    .divider::after {
      right: 0;
    }

    .social-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
    }

    .btn-social {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 12px;
      border: 1px solid #4a5568;
      border-radius: 8px;
      background: transparent;
      color: white;
      font-weight: 500;
      transition: all 0.3s;
      cursor: pointer;
    }

    .btn-social:hover {
      background: #1a202c;
      border-color: #667eea;
    }

    @media (max-width: 968px) {
      .login-wrapper {
        flex-direction: column;
      }

      .left-panel {
        min-height: 300px;
      }

      .left-content h1 {
        font-size: 1.8rem;
      }
    }
  </style>
</head>
<body>
  <div class="login-wrapper">
    <!-- Left Panel - Visual -->
    <div class="left-panel">
      <div class="left-content">
        <div class="logo">
          <i class="bi bi-bus-front-fill"></i>
        </div>
        <h1>Your Journey Starts Here</h1>
        <p>Book your tickets seamlessly and travel with comfort across the city</p>
      </div>
      <div class="carousel-indicators">
        <button class="active"></button>
        <button></button>
        <button></button>
      </div>
    </div>

    <!-- Right Panel - Form -->
    <div class="right-panel">
      <div class="login-container">
        <a href="/" class="back-link">
          <i class="bi bi-arrow-left"></i>
          Back to website
        </a>

        <div class="login-header">
          <h2>Login to your account</h2>
          <p>New user? <a href="#" onclick="showRegisterInfo()">Create an account</a></p>
        </div>
        
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <%= error %>
          </div>
        <% } %>
        
        <form action="/auth/user/login" method="POST">
          <div class="input-group">
            <label for="email" class="form-label">Email</label>
            <input 
              type="email" 
              class="form-control" 
              id="email"
              name="email" 
              placeholder="Enter your email"
              required
              autocomplete="email"
            >
          </div>
          
          <div class="input-group">
            <label for="password" class="form-label">Password</label>
            <input 
              type="password" 
              class="form-control" 
              id="password"
              name="password" 
              placeholder="Enter your password"
              required
              autocomplete="current-password"
            >
          </div>

          <div class="checkbox-container">
            <input type="checkbox" id="terms">
            <label for="terms">I agree to the <a href="#">Terms & Conditions</a></label>
          </div>
          
          <button type="submit" class="btn btn-primary btn-login">
            Login to Dashboard
          </button>
        </form>

        <div style="text-align: center; margin-top: 1rem;">
          <a href="/auth/forgot-password" style="color: #667eea; text-decoration: none; font-size: 0.9rem;">
            <i class="bi bi-key"></i> Forgot password?
          </a>
        </div>
        
        <div class="divider">Or register with</div>

        <div class="social-buttons">
          <button class="btn-social">
            <i class="bi bi-google"></i>
            Google
          </button>
          <button class="btn-social">
            <i class="bi bi-apple"></i>
            Apple
          </button>
        </div>

        <div style="text-align: center; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid #4a5568;">
          <p style="color: #a0aec0; margin: 0;">Admin? <a href="/auth/admin/login" style="color: #667eea; text-decoration: none;">Login here</a></p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Register Modal -->
  <div class="modal fade" id="registerModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content" style="background: #2d3748; color: white; border: 1px solid #4a5568;">
        <div class="modal-header" style="border-bottom: 1px solid #4a5568;">
          <h5 class="modal-title">Create User Account</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="registerForm">
            <div class="mb-3">
              <label for="regName" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="regName" name="name" required>
            </div>
            <div class="mb-3">
              <label for="regEmail" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="regEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="regPhone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="regPhone" name="phone" required>
            </div>
            <div class="mb-3">
              <label for="regPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="regPassword" name="password" required>
            </div>
          </form>
        </div>
        <div class="modal-footer" style="border-top: 1px solid #4a5568;">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" style="background: #667eea; border: none;" onclick="registerUser()">Create Account</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form');
      const submitBtn = document.querySelector('.btn-login');
      
      form.addEventListener('submit', function() {
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Logging in...';
        submitBtn.disabled = true;
      });
      
      document.querySelector('input[name="email"]').focus();
    });
    
    function showRegisterInfo() {
      new bootstrap.Modal(document.getElementById('registerModal')).show();
    }
    
    async function registerUser() {
      const form = document.getElementById('registerForm');
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      try {
        const response = await fetch('/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (response.ok) {
          alert('Account created successfully! You can now login.');
          bootstrap.Modal.getInstance(document.getElementById('registerModal')).hide();
          document.querySelector('input[name="email"]').value = data.email;
        } else {
          alert('Registration failed: ' + result.message);
        }
      } catch (error) {
        alert('Registration failed. Please try again.');
      }
    }
  </script>
</body>
</html>
